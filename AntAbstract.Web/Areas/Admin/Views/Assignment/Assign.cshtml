@model AntAbstract.Web.Models.ViewModels.AssignReviewerViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
    Layout = "_LayoutDashboard";

    var currentSlug = ViewContext.RouteData.Values["slug"]?.ToString();
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold mb-0">@Model.Submission.Title</h4>
            <small class="text-muted">
                @Localizer["PageLead", Model.Submission.Author?.DisplayName]
            </small>
        </div>

        <button type="button" class="btn btn-outline-secondary btn-sm"
                onclick="if (history.length > 1) history.back(); else window.location.href='@($"/{currentSlug}/admin/assignment")'">
            <i class="fas fa-arrow-left me-1"></i> Geri
        </button>
    </div>

    <div class="mb-3">
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <span class="fw-bold text-muted">@Localizer["KeywordsLabel"]</span>
            @if (!string.IsNullOrWhiteSpace(Model.Submission.Keywords))
            {
                <span class="badge bg-info">@Model.Submission.Keywords</span>
            }
            else
            {
                <span class="badge bg-secondary">-</span>
            }
        </div>
    </div>

    <hr />

    <h5 class="fw-bold mb-3">
        <i class="fas fa-star text-warning me-2"></i>@Localizer["RecommendedHeader"]
    </h5>

    @if (!Model.RecommendedReviewers.Any())
    {
        <div class="alert alert-secondary border-0">@Localizer["NoRecommendations"]</div>
    }
    else
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="table-responsive">
                <table class="table table-sm table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["TableHeaderName"]</th>
                            <th>@Localizer["TableHeaderEmail"]</th>
                            <th>@Localizer["TableHeaderExpertise"]</th>
                            <th style="width: 160px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reviewer in Model.RecommendedReviewers)
                        {
                            <tr>
                                <td>@reviewer.DisplayName</td>
                                <td>@reviewer.Email</td>
                                <td>
                                    <span class="badge bg-light text-dark">@reviewer.ExpertiseAreas</span>
                                </td>
                                <td>
                                    <form asp-area="Admin"
                                          asp-controller="Assignment"
                                          asp-action="Assign"
                                          asp-route-slug="@currentSlug"
                                          method="post" class="m-0">
                                        @Html.AntiForgeryToken()

                                        <input type="hidden" name="submissionId" value="@Model.Submission.SubmissionId" />
                                        <input type="hidden" name="reviewerId" value="@reviewer.Id" />

                                        <button type="submit" class="btn btn-sm btn-warning w-100">
                                            @Localizer["AssignRecommendedBtn"]
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <h5 class="fw-bold mb-3">@Localizer["AllReviewersHeader"]</h5>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["TableHeaderName"]</th>
                        <th>@Localizer["TableHeaderEmail"]</th>
                        <th>@Localizer["TableHeaderExpertise"]</th>
                        <th style="width: 160px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reviewer in Model.AllOtherReviewers)
                    {
                        <tr>
                            <td>@reviewer.DisplayName</td>
                            <td>@reviewer.Email</td>
                            <td>
                                <span class="badge bg-light text-dark">@reviewer.ExpertiseAreas</span>
                            </td>
                            <td>
                                <form asp-area="Admin"
                                      asp-controller="Assignment"
                                      asp-action="Assign"
                                      asp-route-slug="@currentSlug"
                                      method="post" class="m-0">
                                    @Html.AntiForgeryToken()

                                    <input type="hidden" name="submissionId" value="@Model.Submission.SubmissionId" />
                                    <input type="hidden" name="reviewerId" value="@reviewer.Id" />

                                    <button type="submit" class="btn btn-sm btn-outline-primary w-100">
                                        @Localizer["AssignBtn"]
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
