@using AntAbstract.Application.DTOs.Submission
@using AntAbstract.Domain.Entities
@model SubmissionDto

@{
    ViewData["Title"] = "Yönetici - Bildiri Detayı";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid px-4">

    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <div>
            <h4 class="fw-bold text-primary mb-0"><i class="fas fa-search me-2"></i>Bildiri İnceleme</h4>
            <small class="text-muted">Ref: #@Model.Id.ToString().Substring(0, 8).ToUpper()</small>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <ul class="nav nav-tabs card-header-tabs" id="adminTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold" id="ozet-tab" data-bs-toggle="tab" data-bs-target="#ozet" type="button">Özet & İçerik</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold" id="yazar-tab" data-bs-toggle="tab" data-bs-target="#yazar" type="button">Yazarlar</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold" id="dosya-tab" data-bs-toggle="tab" data-bs-target="#dosya" type="button">Dosyalar</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="adminTabsContent">

                        <div class="tab-pane fade show active" id="ozet" role="tabpanel">
                            <h5 class="fw-bold text-dark">@Model.Title</h5>
                            <div class="p-3 bg-light rounded border mt-3">
                                <p class="mb-0" style="white-space: pre-wrap; line-height: 1.6;">@Model.Abstract</p>
                            </div>
                            <div class="mt-3">
                                <span class="badge bg-secondary">Anahtar Kelimeler:</span> <span class="text-muted">@Model.Keywords</span>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="yazar" role="tabpanel">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Sıra</th>
                                        <th>Ad Soyad</th>
                                        <th>Kurum</th>
                                        <th>E-Posta</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Authors != null)
                                    {
                                        foreach (var author in Model.Authors.OrderBy(a => a.Order))
                                        {
                                            <tr>
                                                <td>@author.Order</td>
                                                <td class="fw-bold">@author.FirstName @author.LastName</td>
                                                <td>@author.Institution</td>
                                                <td>@author.Email</td>
                                                <td>
                                                    @if (author.IsCorrespondingAuthor)
                                                    {
                                                        <span class="badge bg-info text-dark">Sorumlu</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="tab-pane fade" id="dosya" role="tabpanel">
                            <table class="table table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ver.</th>
                                        <th>Dosya Adı</th>
                                        <th>Tarih</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Files != null && Model.Files.Any())
                                    {
                                        foreach (var file in Model.Files.OrderByDescending(f => f.UploadedAt))
                                        {
                                            <tr>
                                                <td><span class="badge bg-secondary">V.@file.Version</span></td>
                                                <td>@file.FileName</td>
                                                <td>@file.UploadedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                                <td>
                                                    <a href="@file.FilePath" target="_blank" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-download me-1"></i> İndir
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="4" class="text-center text-muted">Dosya yok.</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card shadow-sm border-0 mb-4 border-start border-5 border-primary">
                <div class="card-body">
                    <h6 class="fw-bold text-uppercase text-muted mb-3">Durum Yönetimi</h6>

                    <div class="mb-3 text-center">
                        <span class="display-6 fw-bold text-primary">
                            @if (Model.Status == "New")
                            {
                                <span>Yeni</span>
                            }
                            else if (Model.Status == "UnderReview")
                            {

                                <span>İnceleniyor</span>
                            }
                            else if (Model.Status == "Accepted")
                            {

                                <span class="text-success">Kabul</span>
                            }
                            else if (Model.Status == "Rejected")
                            {

                                <span class="text-danger">Ret</span>
                            }
                            else
                            {

                                <span>@Model.Status</span>
                            }
                        </span>
                        <div class="text-muted small">Mevcut Durum</div>
                    </div>

                    <form asp-action="ChangeStatus" method="post" class="d-grid gap-2">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown">
                                Durumu Değiştir
                            </button>
                            <ul class="dropdown-menu w-100">
                                <li><button class="dropdown-item" type="submit" name="status" value="UnderReview">🟡 İncelemeye Al</button></li>
                                <li><button class="dropdown-item" type="submit" name="status" value="RevisionRequired">🟠 Revizyon İste</button></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><button class="dropdown-item text-success fw-bold" type="submit" name="status" value="Accepted">🟢 Kabul Et</button></li>
                                <li><button class="dropdown-item text-danger fw-bold" type="submit" name="status" value="Rejected">🔴 Reddet</button></li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h6 class="fw-bold text-uppercase text-muted mb-3">Hakem Yönetimi</h6>
                    <div class="alert alert-light border text-center small">
                        Henüz hakem atanmamış.
                    </div>
                    <button class="btn btn-outline-primary w-100 btn-sm">
                        <i class="fas fa-user-plus me-1"></i> Hakem Ata (Yakında)
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>

    var successMsg = '@TempData["SuccessMessage"]';
    var errorMsg = '@TempData["ErrorMessage"]';

    if (successMsg) {
        Swal.fire({
            icon: 'success',           
            title: 'İşlem Başarılı!',  
            text: successMsg,          
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Tamam'
        });
    }

    if (errorMsg) {
        Swal.fire({
            icon: 'error',
            title: 'Hata!',
            text: errorMsg,
            confirmButtonColor: '#d33',
            confirmButtonText: 'Tamam'
        });
    }
</script>