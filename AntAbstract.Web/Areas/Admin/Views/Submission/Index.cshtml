@using AntAbstract.Application.DTOs.Submission
@model List<SubmissionDto>

@{
    ViewData["Title"] = "Bildiri Yönetimi";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    var successMsg = '@Html.Raw(TempData["SuccessMessage"])';
    var errorMsg = '@Html.Raw(TempData["ErrorMessage"])';
    if (successMsg) { Swal.fire('Başarılı!', successMsg, 'success'); }
    if (errorMsg) { Swal.fire('Hata!', errorMsg, 'error'); }
</script>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <div>
            <h3 class="fw-bold text-primary"><i class="fas fa-user-shield me-2"></i> Yönetici Paneli</h3>
            <p class="text-muted mb-0">Tüm başvuruları buradan yönetebilirsiniz.</p>
        </div>
        <div class="alert alert-info py-1 px-3 mb-0 small">
            <i class="fas fa-info-circle me-1"></i> Detay görmek için satırlara tıklayabilirsiniz.
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-header bg-white py-3">
            <i class="fas fa-table me-1"></i> <strong>Sisteme Yüklenen Bildiriler</strong>
        </div>
        <div class="card-body">

            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih</th>
                            <th>Başlık</th>
                            <th>Yazar</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="cursor: pointer;">
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark d-block">
                                        @item.CreatedDate.ToLocalTime().ToString("dd.MM.yyyy")
                                    </a>
                                </td>

                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark d-block fw-bold" title="@item.Title">
                                        <span class="d-inline-block text-truncate" style="max-width: 300px;">
                                            @item.Title
                                        </span>
                                    </a>
                                </td>

                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark d-block">
                                        @item.CorrespondingAuthorName
                                    </a>
                                </td>

                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none d-block">
                                        @if (item.Status == "New")
                                        {
                                            <span class="badge bg-primary">Yeni</span>
                                        }
                                        else if (item.Status == "UnderReview")
                                        {

                                            <span class="badge bg-warning text-dark">İnceleniyor</span>
                                        }
                                        else if (item.Status == "RevisionRequired")
                                        {

                                            <span class="badge bg-info text-dark">Revizyon</span>
                                        }
                                        else if (item.Status == "Accepted")
                                        {

                                            <span class="badge bg-success">Kabul</span>
                                        }
                                        else if (item.Status == "Rejected")
                                        {

                                            <span class="badge bg-danger">Ret</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </a>
                                </td>

                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            İşlem Yap
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                    <i class="fas fa-eye me-2"></i> İncele & Hakem Ata
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="ChangeStatus" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="UnderReview" />
                                                    <button class="dropdown-item" type="submit">🟡 İncelemeye Al</button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="ChangeStatus" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="Accepted" />
                                                    <button class="dropdown-item text-success" type="submit">🟢 Kabul Et</button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="ChangeStatus" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <input type="hidden" name="status" value="Rejected" />
                                                    <button class="dropdown-item text-danger" type="submit">🔴 Reddet</button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="Delete" method="post" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button class="dropdown-item text-danger small" type="submit">🗑️ Sil</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    Sistemde henüz hiç bildiri yok.
                </div>
            }
        </div>
    </div>
</div>