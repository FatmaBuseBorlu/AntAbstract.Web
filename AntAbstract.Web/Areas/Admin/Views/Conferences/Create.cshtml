@model AntAbstract.Domain.Entities.Conference
@{
    ViewData["Title"] = "Yeni Kongre";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var slug = Context.GetRouteValue("slug");
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0">Yeni Kongre Oluştur</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">Kongre Adı</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Örn: 5. Uluslararası Bilim Kongresi" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-muted">Başlangıç Tarihi</label>
                                <input asp-for="StartDate" type="datetime-local" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-muted">Bitiş Tarihi</label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">Konum / Otel / Şehir</label>
                            <input asp-for="Venue" class="form-control" placeholder="Örn: Titanic Hotel, Antalya" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kongre hakkında kısa bilgi..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/@slug/admin/conferences" class="btn btn-light text-muted">İptal</a>
                            <button type="submit" class="btn btn-primary fw-bold px-5">
                                <i class="fas fa-save me-2"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>