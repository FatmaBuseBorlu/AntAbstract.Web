@model IEnumerable<AntAbstract.Domain.Entities.Conference>

@{
    ViewData["Title"] = "Kongre Listesi";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var slug = Context.GetRouteValue("slug")?.ToString() ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-dark"><i class="fas fa-globe me-2"></i> Kongrelerim</h4>

        <a asp-area="Admin"
           asp-controller="Conferences"
           asp-action="Create"
           asp-route-slug="@slug"
           class="btn btn-primary fw-bold shadow-sm">
            <i class="fas fa-plus me-1"></i> Yeni Kongre Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm">
            <i class="fas fa-times-circle me-2"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Kongre Adı</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Konum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">@item.Title</td>
                                <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                                <td>@item.EndDate.ToString("dd.MM.yyyy")</td>
                                <td>@item.Venue</td>
                                <td class="text-end pe-4">
                                    <a asp-area="Admin"
                                       asp-controller="Conferences"
                                       asp-action="Edit"
                                       asp-route-slug="@slug"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>

                                    <form asp-area="Admin"
                                          asp-controller="Conferences"
                                          asp-action="Delete"
                                          asp-route-slug="@slug"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Bu kongreyi silmek istediğinize emin misiniz? Tüm veriler kaybolabilir!');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-folder-open fa-3x mb-3 opacity-25"></i>
                                <p>Henüz kayıtlı bir kongre yok.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
