@model AntAbstract.Domain.Entities.Conference

@{
    ViewData["Title"] = "Kongre Düzenle";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    var slug = Context.GetRouteValue("slug")?.ToString() ?? "";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">Kongre Düzenle</h5>

                    <span class="badge bg-light text-dark border">
                        @Model.Title
                    </span>
                </div>

                <div class="card-body p-4">
                    <form asp-area="Admin"
                          asp-controller="Conferences"
                          asp-action="Edit"
                          asp-route-slug="@slug"
                          asp-route-id="@Model.Id"
                          method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">Kongre Adı</label>
                            <input asp-for="Title" class="form-control form-control-lg" required />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-muted">Başlangıç Tarihi</label>
                                <input asp-for="StartDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small text-muted">Bitiş Tarihi</label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold small text-muted">Konum / Otel / Şehir</label>
                            <input asp-for="Venue" class="form-control" />
                            <span asp-validation-for="Venue" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-area="Admin"
                               asp-controller="Conferences"
                               asp-action="Index"
                               asp-route-slug="@slug"
                               class="btn btn-light text-muted">
                                İptal
                            </a>

                            <button type="submit" class="btn btn-primary fw-bold px-5">
                                <i class="fas fa-save me-2"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </div>
    </div>
</div>
