@model IEnumerable<AntAbstract.Domain.Entities.Session>
@{
    ViewData["Title"] = "Oturum Yönetimi";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml"; 
    var slug = Context.GetRouteValue("slug");
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold"><i class="fas fa-calendar-alt me-2"></i> Oturum Yönetimi</h4>
        <a href="/@slug/admin/session/create" class="btn btn-primary fw-bold">
            <i class="fas fa-plus me-1"></i> Yeni Oturum Ekle
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm">@TempData["SuccessMessage"]</div>
    }

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Oturum Başlığı</th>
                        <th>Tarih & Saat</th>
                        <th>Salon / Konum</th>
                        <th>Bildiri Sayısı</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Title</td>
                            <td>@item.SessionDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@(item.Location ?? "Belirtilmemiş")</td>
                            <td>
                                <span class="badge bg-info text-dark">@item.Submissions.Count Bildiri</span>
                            </td>
                            <td class="text-end pe-4">
                                <a href="/@slug/admin/session/manage/@item.Id" class="btn btn-sm btn-outline-success fw-bold me-1">
                                    <i class="fas fa-tasks me-1"></i> Programla
                                </a>
                                <a href="/@slug/admin/session/edit/@item.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="/@slug/admin/session/delete" style="display:inline;" onsubmit="return confirm('Bu oturumu silmek istediğinize emin misiniz?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>