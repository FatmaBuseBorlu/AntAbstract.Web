@model AntAbstract.Web.Models.ViewModels.ReportsIndexViewModel

@{
    ViewData["Title"] = "Raporlar";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold mb-1">Raporlar</h4>
            <small class="text-muted d-block">
                Seçili Kongre: <strong>@Model.ConferenceTitle</strong> (@Model.Slug)
            </small>
        </div>

        <a href="/admin/reports" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-exchange-alt me-1"></i> Kongre Değiştir
        </a>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Toplam Bildiri</div>
                    <div class="fs-3 fw-bold">@Model.TotalSubmissions</div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Atanan Bildiri</div>
                    <div class="fs-3 fw-bold">@Model.AssignedSubmissions</div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Toplam Atama</div>
                    <div class="fs-3 fw-bold">@Model.TotalAssignments</div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted small">Karar Verilen</div>
                    <div class="fs-3 fw-bold">@Model.DecidedSubmissions</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mt-3">
        <div class="card-body">
            <div class="fw-bold mb-2">Durum Dağılımı</div>

            <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Durum</th>
                            <th style="width: 120px;">Adet</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>Yeni</td><td class="fw-bold">@Model.NewCount</td></tr>
                        <tr><td>Beklemede</td><td class="fw-bold">@Model.PendingCount</td></tr>
                        <tr><td>Değerlendirmede</td><td class="fw-bold">@Model.UnderReviewCount</td></tr>
                        <tr><td>Kabul</td><td class="fw-bold">@Model.AcceptedCount</td></tr>
                        <tr><td>Red</td><td class="fw-bold">@Model.RejectedCount</td></tr>
                        <tr><td>Revizyon</td><td class="fw-bold">@Model.RevisionRequiredCount</td></tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-3 d-flex gap-2 flex-wrap">
                <a class="btn btn-sm btn-outline-info" href="/@Model.Slug/admin/assignment?conferenceId=@Model.ConferenceId">
                    <i class="fas fa-tasks me-1"></i> Özet Atama
                </a>

                <a class="btn btn-sm btn-outline-danger" href="/@Model.Slug/admin/decision">
                    <i class="fas fa-gavel me-1"></i> Karar Ekranı
                </a>
            </div>
        </div>
    </div>

</div>
