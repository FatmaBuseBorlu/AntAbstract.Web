@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .login-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
    }

    .form-control:focus {
        box-shadow: 0 0 0 4px rgba(0, 174, 239, 0.1);
        border-color: #00aeef;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border: 1px solid #e0e0e0;
        border-right: none;
        border-radius: 8px 0 0 8px;
        color: #6c757d;
    }
    
    .input-group .form-control {
        border-left: none;
        border-radius: 0 8px 8px 0;
    }

    .btn-orcid {
        background-color: #F8F8F8;
        border-color: #D3D3D3;
        color: #000;
    }

    .btn-orcid:hover {
        background-color: #EAEAEA;
    }
</style>

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card login-card bg-white p-4 p-md-5">

                <div class="text-center mb-4">
                    <h2 class="fw-bold text-dark">Tekrar Hoş Geldiniz</h2>
                    <p class="text-muted small">Hesabınıza erişmek için bilgilerinizi giriniz.</p>
                    <div style="width: 50px; height: 3px; background-color: #00aeef; margin: 0 auto; border-radius: 2px;"></div>
                </div>

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label fw-bold small text-muted">E-Posta Adresi</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control" placeholder="ornek@email.com" autocomplete="username" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <label asp-for="Input.Password" class="form-label fw-bold small text-muted">Şifre</label>
                            <a asp-page="./ForgotPassword" class="small text-decoration-none" style="color: #00aeef;">Şifremi Unuttum?</a>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Input.Password" class="form-control" placeholder="******" autocomplete="current-password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label small text-muted">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="d-grid mb-4">
                        <button id="login-submit" type="submit" class="btn btn-primary py-3 fw-bold shadow-sm" style="background-color: #00aeef; border: none;">
                            GİRİŞ YAP
                        </button>
                    </div>

                    <div class="text-center small">
                        <p class="text-muted mb-1">Hesabınız yok mu? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none" style="color: #0056b3;">Kayıt Ol</a></p>
                        <a asp-page="./ResendEmailConfirmation" class="text-muted text-decoration-none" style="font-size: 0.8rem;">Onay mailini tekrar gönder</a>
                    </div>
                </form>

                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="text-center mt-4">
                        <div class="divider mb-3 small text-muted">Veya şu hesapla devam et</div>

                        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2 col-9 mx-auto">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-outline-dark btn-orcid fw-bold w-100 py-2 rounded-pill shadow-sm"
                                            name="provider"
                                            value="@provider.Name"
                                            title="@provider.DisplayName ile giriş yapın">
                                        
                                        @if (provider.Name == "ORCID")
                                        {
                                            <i class="fab fa-orcid me-2" style="color: #A6CE39;"></i> <span>ORCID ile Giriş Yap</span>
                                        }
                                        else
                                        {
                                            @provider.DisplayName
                                        }
                                    </button>
                                }
                            </div>
                        </form>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}