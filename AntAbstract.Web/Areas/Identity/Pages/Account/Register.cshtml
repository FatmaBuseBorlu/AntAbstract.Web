@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 12px 15px;
    }

        .form-control:focus {
            box-shadow: 0 0 0 4px rgba(0, 174, 239, 0.1);
            border-color: #00aeef;
        }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 6px;
    }

    .register-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    }
    /* Checkbox Stili */
    .form-check-input:checked {
        background-color: #00aeef;
        border-color: #00aeef;
    }
</style>

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <div class="card register-card bg-white p-4 p-md-5">

                <div class="text-center mb-5">
                    <h2 class="fw-bold text-dark">Aramıza Katılın</h2>
                    <p class="text-muted">Kongre sistemine tam erişim için formu doldurunuz.</p>
                    <div style="width: 50px; height: 4px; background-color: #00aeef; margin: 0 auto; border-radius: 2px;"></div>
                </div>

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-4" role="alert"></div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label asp-for="Input.FirstName" class="form-label">İsim <span class="text-danger">*</span></label>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.LastName" class="form-label">Soyisim <span class="text-danger">*</span></label>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.IdentityNumber" class="form-label">TC / Pasaport No <span class="text-danger">*</span></label>
                            <input asp-for="Input.IdentityNumber" class="form-control" placeholder="Kimlik No" />
                            <span asp-validation-for="Input.IdentityNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label asp-for="Input.Email" class="form-label">E-Posta <span class="text-danger">*</span></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="ornek@email.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.AlternativeEmail" class="form-label">Alternatif E-Posta</label>
                            <input asp-for="Input.AlternativeEmail" class="form-control" placeholder="Opsiyonel" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.PhoneNumber" class="form-label">Telefon</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="555 123 45 67" />
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label asp-for="Input.University" class="form-label">Üniversite / Kurum</label>
                            <input asp-for="Input.University" class="form-control" placeholder="Kurum Adı" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.Title" class="form-label">Ünvan</label>
                            <input asp-for="Input.Title" class="form-control" placeholder="Prof. Dr. vb." />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.Profession" class="form-label">Meslek / Uzmanlık</label>
                            <input asp-for="Input.Profession" class="form-control" placeholder="Alanınız" />
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <label asp-for="Input.City" class="form-label">Şehir</label>
                            <input asp-for="Input.City" class="form-control" placeholder="Şehir" />
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Input.Address" class="form-label">Adres</label>
                            <input asp-for="Input.Address" class="form-control" placeholder="Açık adresiniz" />
                        </div>
                    </div>

                    <div class="p-4 mb-4 rounded-3 bg-light border border-primary-subtle">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Input.Password" class="form-label">Şifre <span class="text-danger">*</span></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="******" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.ConfirmPassword" class="form-label">Şifre Tekrar <span class="text-danger">*</span></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="******" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 align-items-center mb-4">
                        <div class="col-md-6">
                            <label asp-for="Input.ProfileImage" class="form-label">Profil Resmi</label>
                            <div class="input-group">
                                <input asp-for="Input.ProfileImage" type="file" class="form-control" id="inputGroupFile02">
                                <label class="input-group-text" for="inputGroupFile02">Yükle</label>
                            </div>
                            <small class="text-muted" style="font-size: 0.75rem;">Vesikalık formatında yükleyiniz.</small>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check p-3 rounded border d-flex align-items-center">
                                <input asp-for="Input.TermsAccepted" class="form-check-input mt-0 me-2" type="checkbox" style="width: 1.2em; height: 1.2em;" />
                                <label class="form-check-label small text-muted">
                                    <a href="#" class="text-decoration-none fw-bold" style="color: #00aeef;">Kullanım Koşullarını</a> okudum ve kabul ediyorum.
                                </label>
                            </div>
                            <span asp-validation-for="Input.TermsAccepted" class="text-danger d-block small mt-1"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold shadow-sm" style="background-color: #00aeef; border: none;">
                            KAYDI TAMAMLA
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">Zaten bir hesabınız var mı? <a asp-page="./Login" class="fw-bold text-decoration-none" style="color: #0056b3;">Giriş Yap</a></p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}