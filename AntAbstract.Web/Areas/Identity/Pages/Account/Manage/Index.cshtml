@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_Layout"; // <--- BU SATIR EKSİKTİ, EKLENDİ.
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<h4 class="fw-bold mb-4 text-primary">Profil Bilgileri</h4>

<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control bg-light" placeholder="Kullanıcı adınız" disabled />
                <label asp-for="Username" class="text-muted">Kullanıcı Adı</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon numaranız" />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefon Numarası</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm" style="background-color: #00aeef; border: none;">
                DEĞİŞİKLİKLERİ KAYDET
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}