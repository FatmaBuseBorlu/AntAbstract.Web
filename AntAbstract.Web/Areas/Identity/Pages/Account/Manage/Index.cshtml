@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_Layout"; // Layout bağlantısını unutmayalım
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<h4 class="fw-bold mb-4 text-primary">Profil Bilgileri</h4>

<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-3" role="alert"></div>

            <div class="d-flex align-items-center mb-4 p-3 bg-light rounded-3 border">
                <div class="me-4">
                    @if (ViewData["CurrentProfileImage"] != null)
                    {
                        <img src="@ViewData["CurrentProfileImage"]" class="rounded-circle shadow-sm border border-2 border-white" style="width: 80px; height: 80px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="rounded-circle bg-white border d-flex align-items-center justify-content-center text-secondary" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="fas fa-user"></i>
                        </div>
                    }
                </div>
                <div class="flex-grow-1">
                    <label asp-for="Input.ProfileImage" class="form-label small fw-bold text-dark">Profil Fotoğrafını Değiştir</label>
                    <input asp-for="Input.ProfileImage" type="file" class="form-control form-control-sm" accept="image/*" />
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username">Kullanıcı Adı (Email)</label>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Ad" />
                        <label asp-for="Input.FirstName">Ad</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Soyad" />
                        <label asp-for="Input.LastName">Soyad</label>
                    </div>
                </div>
            </div>

            <div class="row g-2 mb-3">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Input.Title" class="form-control" placeholder="Ünvan" />
                        <label asp-for="Input.Title">Ünvan (Prof. Dr. vb)</label>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-floating">
                        <input asp-for="Input.University" class="form-control" placeholder="Kurum" />
                        <label asp-for="Input.University">Üniversite / Kurum</label>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon" />
                <label asp-for="Input.PhoneNumber">Telefon Numarası</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <textarea asp-for="Input.ExpertiseAreas" class="form-control" style="height: 100px" placeholder="Uzmanlık"></textarea>
                <label asp-for="Input.ExpertiseAreas">Uzmanlık Alanları (Hakemlik eşleşmesi için)</label>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm" style="background-color: #00aeef; border: none;">
                DEĞİŞİKLİKLERİ KAYDET
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}