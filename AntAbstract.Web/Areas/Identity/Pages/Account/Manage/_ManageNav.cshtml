@using AntAbstract.Domain.Entities
@inject SignInManager<AppUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="list-group list-group-flush rounded-3 overflow-hidden">
    <a class="list-group-item list-group-item-action py-3 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
        <i class="fas fa-user-circle me-2 text-primary"></i> Profil
    </a>
    <a class="list-group-item list-group-item-action py-3 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
        <i class="fas fa-envelope me-2 text-primary"></i> E-Posta
    </a>
    <a class="list-group-item list-group-item-action py-3 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
        <i class="fas fa-key me-2 text-primary"></i> Şifre
    </a>
    @if (hasExternalLogins)
    {
        <a id="external-login" class="list-group-item list-group-item-action py-3 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
            <i class="fas fa-share-alt me-2 text-primary"></i> Harici Girişler
        </a>
    }
    <a class="list-group-item list-group-item-action py-3 @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
        <i class="fas fa-shield-alt me-2 text-primary"></i> İki Faktörlü Doğrulama
    </a>
    <a class="list-group-item list-group-item-action py-3 @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
        <i class="fas fa-database me-2 text-primary"></i> Kişisel Veriler
    </a>
</div>