@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container py-5 mt-5">

    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-dark">Hesap Yönetimi</h2>
            <p class="text-muted">Profil bilgilerinizi ve güvenlik ayarlarınızı buradan yönetebilirsiniz.</p>
            <div style="width: 50px; height: 3px; background-color: #00aeef; border-radius: 2px;"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-0">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}