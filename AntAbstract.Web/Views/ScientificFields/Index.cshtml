@model IEnumerable<AntAbstract.Domain.Entities.ScientificField>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@Localizer["PageTitle"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> @Localizer["CreateNewButton"]
        </a>
    </p>
</div>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>@Localizer["TableHeaderName"]</th>
            <th style="width: 20%;">@Localizer["TableHeaderActions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                        <i class="bi bi-pencil me-1"></i> @Localizer["EditButton"]
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash me-1"></i> @Localizer["DeleteButton"]
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>