@model AntAbstract.Domain.Entities.ScientificField
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold">@Localizer["NameLabel"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">@Localizer["CreateButton"]</button>
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["BackToListLink"]</a>
            </div>
        </form>
    </div>
</div>