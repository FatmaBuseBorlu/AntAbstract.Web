@using Microsoft.AspNetCore.Identity
@using AntAbstract.Domain.Entities
@inject UserManager<AppUser> UserManager
@model AntAbstract.Domain.Entities.Conference

@{
    Layout = "_Layout";
    var slug = ViewContext.RouteData.Values["slug"];

    var user = await UserManager.GetUserAsync(User);

    var backUrl = ViewBag.BackUrl as string;
    if (string.IsNullOrEmpty(backUrl))
    {
        backUrl = "/";
    }
}

<style>
    .step-indicator {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .step {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin: 0 10px;
        position: relative;
    }

        .step.active {
            background: #00aeef;
            color: white;
            box-shadow: 0 0 10px rgba(0, 174, 239, 0.4);
        }

    .step-line {
        height: 2px;
        background: #e9ecef;
        flex: 1;
        margin-top: 20px;
        max-width: 100px;
    }

    .summary-card {
        background-color: #f8f9fa;
        border-radius: 10px;
        border: 1px solid #e9ecef;
    }

    .user-profile-mini {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px;
        background: white;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .avatar-circle {
        width: 50px;
        height: 50px;
        background-color: #00aeef;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: bold;
    }
</style>

<div class="container mt-5 pt-5 mb-5">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex align-items-center justify-content-center mb-4">
                <div class="text-center">
                    <div class="step active">1</div>
                    <small class="fw-bold mt-1 d-block text-primary">Kayıt Onayı</small>
                </div>
                <div class="step-line"></div>
                <div class="text-center">
                    <div class="step">2</div>
                    <small class="fw-bold mt-1 d-block text-muted">Ödeme</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white p-4 text-center border-bottom">
                    <h4 class="fw-bold text-dark mb-1">Kongre Kayıt Onayı</h4>
                    <p class="text-muted small mb-0">Lütfen bilgilerinizi kontrol edip onaylayın</p>
                </div>

                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <span class="badge bg-light text-primary border mb-2">@Model.StartDate.ToString("yyyy")</span>
                        <h5 class="fw-bold text-dark">@Model.Title</h5>
                        <div class="d-flex justify-content-center gap-3 text-muted small mt-2">
                            <span><i class="fas fa-calendar-alt me-1"></i> @Model.StartDate.ToString("dd MMMM yyyy")</span>
                            <span><i class="fas fa-map-marker-alt me-1"></i> @(Model.City ?? "Online")</span>
                        </div>
                    </div>

                    <div class="summary-card p-3 mb-4">
                        <label class="small text-muted fw-bold text-uppercase mb-2">Kayıt Yapılacak Hesap</label>
                        <div class="user-profile-mini">
                            <div class="avatar-circle">
                                @(user?.UserName?.Substring(0, 1).ToUpper() ?? "U")
                            </div>
                            <div class="lh-1">
                                <h6 class="fw-bold mb-1">@(user?.FirstName + " " + user?.LastName)</h6>
                                <small class="text-muted">@user?.Email</small> <br>
                                <small class="text-muted" style="font-size: 11px;">@user?.PhoneNumber</small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
                        <div>
                            <span class="fw-bold text-dark">Katılım Ücreti</span>
                            <div class="small text-muted">Standart Katılım Bedeli</div>
                        </div>
                        <div class="fs-4 fw-bold text-primary">
                            @ViewBag.Price @ViewBag.Currency
                        </div>
                    </div>

                    <form asp-action="Create" asp-route-slug="@slug" method="post">
                        <input type="hidden" name="conferenceId" value="@Model.Id" />

                        <div class="form-check bg-light p-3 rounded border mb-4">
                            <input class="form-check-input mt-1" type="checkbox" id="terms" required style="cursor: pointer;">
                            <label class="form-check-label small text-muted lh-sm ms-2" for="terms" style="cursor: pointer;">
                                <span class="fw-bold text-dark">Katılım ve İptal Koşulları</span>'nı okudum, kişisel verilerimin işlenmesini kabul ediyorum ve kaydımı onaylıyorum.
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold shadow-sm" style="background-color: #00aeef; border: none;">
                                <span>KAYDI TAMAMLA</span> <i class="fas fa-arrow-right ms-2"></i>
                            </button>

                            <a href="@backUrl" class="btn btn-link text-muted text-decoration-none btn-sm">Vazgeç ve Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4 text-muted small">
                <i class="fas fa-lock me-1"></i> Tüm işlemleriniz 256-bit SSL ile korunmaktadır.
            </div>

        </div>
    </div>
</div>