@model AntAbstract.Domain.Entities.Conference

@{
    ViewData["Title"] = "Kongre Kaydı";
    Layout = "_Layout";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-primary text-white p-4 rounded-top-3">
                    <h4 class="mb-0 fw-bold"><i class="fas fa-user-plus me-2"></i> Kongre Kayıt İşlemi</h4>
                </div>

                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.LogoPath))
                        {
                            <img src="@Model.LogoPath" style="height: 80px; object-fit: contain;" class="mb-3">
                        }
                        <h3 class="fw-bold text-dark">@Model.Title</h3>
                        <p class="text-muted">
                            <i class="far fa-calendar-alt me-1"></i> @Model.StartDate.ToString("dd MMMM yyyy")
                            <span class="mx-2">|</span>
                            <i class="fas fa-map-marker-alt me-1"></i> @Model.City
                        </p>
                    </div>

                    <div class="alert alert-light border border-primary border-start-4 mb-4">
                        <h6 class="fw-bold text-primary"><i class="fas fa-info-circle me-2"></i> Bilgilendirme</h6>
                        <p class="mb-0 small">
                            Sayın katılımcı, aşağıdaki butona tıklayarak kongreye ön kaydınızı oluşturacaksınız.
                            Kayıt işleminden sonra ödeme sayfasına yönlendirileceksiniz.
                        </p>
                    </div>

                    <form asp-controller="Registration"
                          asp-action="Create"
                          asp-route-slug="@Model.Tenant.Slug"
                          method="post">

                        <input type="hidden" name="conferenceId" value="@Model.Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg fw-bold py-3 shadow-sm">
                                <i class="fas fa-check-circle me-2"></i> KAYDI ONAYLA VE İLERLE
                            </button>

                            <a href="/@Model.Tenant.Slug" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        e.preventDefault(); 

        const form = this;

        Swal.fire({
            title: 'Kaydınız Alınıyor',
            text: "Kongre kaydınız oluşturulacak, onaylıyor musunuz?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, Onayla',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    });
</script>