@model AntAbstract.Domain.Entities.Conference
@{
    Layout = "_Layout";
    var slug = ViewContext.RouteData.Values["slug"];
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-primary text-white p-4 rounded-top-4">
                    <h3 class="mb-0 text-center">Kongre Kayıt Formu</h3>
                </div>
                <div class="card-body p-5">

                    <div class="text-center mb-4">
                        <h4 class="fw-bold text-dark">@Model.Title</h4>
                        <p class="text-muted"><i class="fas fa-calendar-alt me-2"></i> @Model.StartDate.ToString("dd MMMM yyyy")</p>
                    </div>

                    <div class="alert alert-light border p-3 mb-4">
                        <h5 class="fw-bold mb-3">Kayıt Özeti</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Katılım Ücreti:</span>
                            <span class="fw-bold">@ViewBag.Price @ViewBag.Currency</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Kullanıcı:</span>
                            <span>@User.Identity.Name</span>
                        </div>
                    </div>

                    <form asp-action="Create" asp-route-slug="@slug" method="post">
                        <input type="hidden" name="conferenceId" value="@Model.Id" />

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="terms" required>
                            <label class="form-check-label small text-muted" for="terms">
                                Katılım koşullarını ve iptal şartlarını okudum, onaylıyorum.
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3 fw-bold shadow-sm">
                                <i class="fas fa-check-circle me-2"></i> KAYDI ONAYLA VE ÖDEMEYE GEÇ
                            </button>
                            <a href="/" class="btn btn-outline-secondary">Vazgeç</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>