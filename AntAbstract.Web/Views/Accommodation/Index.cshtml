@model IEnumerable<AntAbstract.Domain.Entities.Hotel>

@{
    ViewData["Title"] = "Konaklama Seçenekleri";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white p-4">
                    <h3 class="fw-bold text-dark mb-0">
                        <i class="fas fa-hotel text-warning me-2"></i> Konaklama & Otel Seçenekleri
                    </h3>
                    <p class="text-muted mb-0 mt-2">Kongre süresince konaklayabileceğiniz anlaşmalı oteller ve özel fiyatlar.</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-12 mb-5">
                    <div class="card shadow border-0 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center" style="min-height: 250px;">
                                @if (!string.IsNullOrEmpty(hotel.PhotoPath))
                                {
                                    <img src="@hotel.PhotoPath" class="img-fluid" style="object-fit:cover; height:100%; width:100%">
                                }
                                else
                                {
                                    <div class="text-center text-muted">
                                        <i class="fas fa-hotel fa-4x mb-3 opacity-50"></i>
                                        <p>Görsel Yok</p>
                                    </div>
                                }
                            </div>

                            <div class="col-md-8">
                                <div class="card-body p-4 h-100 d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title fw-bold mb-1">@hotel.Name</h4>
                                            <p class="text-muted small mb-2"><i class="fas fa-map-marker-alt me-1 text-danger"></i> @hotel.Address</p>
                                        </div>
                                        <span class="badge bg-primary">Anlaşmalı</span>
                                    </div>

                                    <p class="card-text text-secondary mt-3">@hotel.Description</p>

                                    <div class="table-responsive mt-auto">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead class="table-light small text-uppercase text-muted">
                                                <tr>
                                                    <th>Oda Tipi</th>
                                                    <th>Kapasite</th>
                                                    <th class="text-end">Fiyat (Gecelik)</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (hotel.RoomTypes != null)
                                                {
                                                    foreach (var room in hotel.RoomTypes)
                                                    {
                                                        <tr>
                                                            <td class="fw-bold text-dark">@room.Name</td>
                                                            <td><i class="fas fa-user me-1"></i> @room.Capacity Kişilik</td>
                                                            <td class="text-end fw-bold text-primary">@room.Price @room.Currency</td>
                                                            <td class="text-end">
                                                                <button class="btn btn-sm btn-warning fw-bold text-white shadow-sm" style="background-color: #ff9800; border:none;">
                                                                    SEÇ & REZERVE ET
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="alert alert-light border d-inline-block px-5">
                <i class="fas fa-info-circle fa-2x text-muted mb-3"></i>
                <h5>Henüz listelenen bir otel yok.</h5>
                <p class="text-muted">Lütfen daha sonra tekrar kontrol ediniz.</p>

                <div class="mt-3 pt-3 border-top">
                    <small class="text-danger fw-bold">Geliştirici Modu:</small><br>
                    <a href="/Accommodation/SeedData" class="btn btn-outline-danger btn-sm mt-2">
                        <i class="fas fa-database me-1"></i> Test Verisi Ekle
                    </a>
                </div>
            </div>
        </div>
    }
</div>