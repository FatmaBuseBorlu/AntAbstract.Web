@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject AntAbstract.Infrastructure.Context.TenantContext Tc
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AntAbstract - Bilimsel Etkinlik Yönetimi</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .navbar {
            padding: 15px 0;
            transition: all 0.3s ease-in-out;
            background-color: rgba(255, 255, 255, 0.95); /* Hafif beyaz zemin */
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: #333;
            letter-spacing: -0.5px;
        }

        .nav-link {
            font-weight: 600;
            color: #555 !important;
            margin: 0 10px;
            font-size: 0.95rem;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #00aeef !important;
            }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg fixed-top navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    ANT <span style="color: #00aeef;">ABSTRACT</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Congresses">Kongreler</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a></li>

                    </ul>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-5 mt-auto" style="position: relative; z-index: 10;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">ANT ABSTRACT</h5>
                    <p class="text-muted small">Bilimsel kongre süreçlerinizi A'dan Z'ye yöneten yeni nesil platform.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">Hızlı Linkler</h5>
                    <ul class="list-unstyled text-muted small">
                        <li><a href="/Home/About" class="text-white text-decoration-none">Hakkımızda</a></li>
                        <li><a href="/Home/Congresses" class="text-white text-decoration-none">Kongreler</a></li>
                        <li><a href="/Home/Contact" class="text-white text-decoration-none">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">İletişim</h5>
                    <p class="text-muted small mb-1"><i class="fas fa-envelope me-2"></i> destek@antabstract.com</p>
                    <p class="text-muted small"><i class="fas fa-phone me-2"></i> +90 555 000 00 00</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted small">
                &copy; @DateTime.Now.Year AntAbstract. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>