@using AntAbstract.Domain.Entities
@inject AntAbstract.Infrastructure.Context.TenantContext Tc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Tc.Current?.Name ?? "AntAbstract.Web") - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AntAbstract.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-tenant="@(Tc.Current?.Slug)">
                    @(Tc.Current?.Name ?? "AntAbstract.Web")
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy" asp-route-tenant="@(Tc.Current?.Slug)">Gizlilik</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Tenants" asp-action="Index">Kongre Yönetimi</a>
                        </li>

                        @* Sadece Giriş Yapmış Kullanıcılar İçin Linkler *@
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Submission" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">Özetlerim</a>
                           </li>

                          <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Message" asp-action="Inbox">Mesajlar</a>
                          </li>

                            @* Sadece Hakemler İçin Link *@
                            @if (User.IsInRole("Reviewer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Review"
                                       asp-action="Index"
                                       asp-route-tenant="@(Tc.Current?.Slug)">Değerlendirmelerim</a>
                                </li>
                            }

                            @* Sadece Admin ve Organizatorler İçin Linkler *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Organizator"))
                            {
                                <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Yönetim Paneli
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" 
                asp-controller="Dashboard" 
                asp-action="Index" 
                asp-route-tenant="@(Tc.Current?.Slug)">Ana Panel</a>
            </li>
            <li><a class="dropdown-item" 
                asp-controller="Reports" 
                asp-action="Index" 
                asp-route-tenant="@(Tc.Current?.Slug)">Raporlar</a>
            </li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="Assignment" 
                asp-action="Index" 
                asp-route-tenant="@(Tc.Current?.Slug)">Özet Atama</a>
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="Decision" 
                asp-action="Index" 
                asp-route-tenant="@(Tc.Current?.Slug)">Karar Ekranı</a>
            </li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="Sessions" 
                asp-action="Index" 
                asp-route-tenant="@(Tc.Current?.Slug)">Oturum Yönetimi</a>
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="Reviewer" 
                asp-action="Index" 
                asp-route-tenant="@(Tc.Current?.Slug)">Hakem Yönetimi</a>
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="Admin" 
                asp-action="UserList">Kullanıcı Yönetimi</a>
            </li>
            <li>
                <hr class="dropdown-divider">
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="Tenants" 
                asp-action="Index">Kongre Tanımları</a>
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="ScientificFields"
                asp-action="Index">Bilimsel Alanlar</a>
            </li>
            <li>
                <a class="dropdown-item" 
                asp-controller="CongressTypes" 
                asp-action="Index">Kongre Türleri</a>
            </li>
            <li>
                <h6 class="dropdown-header">Genel Ayarlar</h6>
            </li>
        </ul>
    </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @(Tc.Current?.Name ?? "AntAbstract.Web") - <a asp-controller="Home" asp-action="Privacy" asp-route-tenant="@(Tc.Current?.Slug)">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>