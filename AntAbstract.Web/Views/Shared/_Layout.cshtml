@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject AntAbstract.Infrastructure.Context.TenantContext Tc
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Tc.Current?.Name ?? "AntAbstract") - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AntAbstract.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">
                    @(Tc.Current?.Name ?? "AntAbstract")
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["HomePage"]</a>
                        </li>

                        @if (Tc.Current != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Program" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["Program"]</a>
                            </li>
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Submission" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["MySubmissions"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Message" asp-action="Inbox">@Localizer["Messages"]</a>
                            </li>

                            @if (Tc.Current != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Registration" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["RegistrationLink"]</a>
                                </li>
                            }

                            @if (User.IsInRole("Reviewer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Review" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["MyReviews"]</a>
                                </li>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("Organizator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @Localizer["ManagementPanel"]
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><h6 class="dropdown-header">@Localizer["HeaderWorkflow"]</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemDashboard"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemReports"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="Assignment" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemAssignAbstract"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="Decision" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemDecisionScreen"]</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">@Localizer["HeaderManagement"]</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Sessions" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemSessionManagement"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="ReviewForms" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemReviewForms"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="Reviewer" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemReviewerManagement"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="UserList">@Localizer["ItemUserManagement"]</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">@Localizer["HeaderRegistration"]</h6></li>
                                        <li><a class="dropdown-item" asp-controller="RegistrationTypes" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["ItemRegistrationTypes"]</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">@Localizer["HeaderSystemSettings"]</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Tenants" asp-action="Index">@Localizer["ItemCongressDefinitions"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="ScientificFields" asp-action="Index">@Localizer["ItemScientificFields"]</a></li>
                                        <li><a class="dropdown-item" asp-controller="CongressTypes" asp-action="Index">@Localizer["ItemCongressTypes"]</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <div class="navbar-nav ms-auto">
                        @{
                            var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                            var cultureItems = new[]
                            {
                                                new SelectListItem { Value = "tr-TR", Text = "Türkçe (TR)" },
                                                new SelectListItem { Value = "en-US", Text = "English (US)" },
                                                };
                        }
                        <form class="d-flex" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" method="post">
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-globe"></i> @requestCulture.RequestCulture.UICulture.TwoLetterISOLanguageName.ToUpper()
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @foreach (var item in cultureItems)
                                    {
                                        <li>
                                            <button type="submit" class="dropdown-item" name="culture" value="@item.Value">
                                                @item.Text
                                            </button>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </form>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @(Tc.Current?.Name ?? "AntAbstract") - <a asp-controller="Home" asp-action="Privacy" asp-route-tenant="@(Tc.Current?.Slug)">@Localizer["Privacy"]</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>