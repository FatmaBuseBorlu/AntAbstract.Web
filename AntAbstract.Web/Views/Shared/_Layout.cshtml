@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject AntAbstract.Infrastructure.Context.TenantContext Tc
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Tc.Current?.Name ?? "AntAbstract")</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar navbar-expand-lg fixed-top navbar-light transition-all" id="mainNav">
        <div class="container">

            <a class="navbar-brand font-weight-bold d-flex align-items-center" asp-controller="Home" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">
                <span class="brand-text">ANT <span class="text-primary">ABSTRACT</span></span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" asp-route-tenant="@(Tc.Current?.Slug)">Ana Sayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Congresses">Kongreler</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">İletişim</a>
                    </li>

                    @if (Tc.Current != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Program" asp-route-tenant="@(Tc.Current?.Slug)">Program</a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center gap-3">

                    @{
                        var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                    }
                    <form asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" method="post">
                        <div class="dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-globe me-1"></i> @requestCulture.RequestCulture.UICulture.TwoLetterISOLanguageName.ToUpper()
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3">
                                <li><button type="submit" class="dropdown-item" name="culture" value="tr-TR">🇹🇷 Türkçe</button></li>
                                <li><button type="submit" class="dropdown-item" name="culture" value="en-US">🇺🇸 English</button></li>
                            </ul>
                        </div>
                    </form>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">ANT ABSTRACT</h5>
                    <p class="text-muted small">Bilimsel kongre süreçlerinizi A'dan Z'ye yöneten yeni nesil platform.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">Hızlı Linkler</h5>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">Hakkımızda</a></li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Congresses" class="text-white text-decoration-none">Kongreler</a>
                        </li>
                        <li class="mb-2"><a href="#" class="text-white text-decoration-none">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">İletişim</h5>
                    <p class="text-muted small mb-1"><i class="fas fa-envelope me-2"></i> destek@antabstract.com</p>
                    <p class="text-muted small"><i class="fas fa-phone me-2"></i> +90 555 000 00 00</p>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted small">
                &copy; @DateTime.Now.Year AntAbstract. Tüm hakları saklıdır.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        window.addEventListener('scroll', function() {
            var navbar = document.getElementById('mainNav');
            if (window.scrollY > 50) {
                navbar.classList.add('navbar-scrolled');
            } else {
                navbar.classList.remove('navbar-scrolled');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>