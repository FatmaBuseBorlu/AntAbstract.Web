@model IEnumerable<AntAbstract.Domain.Entities.Conference>

@{
    ViewData["Title"] = ViewBag.PageTitle ?? "Kongre Seç";
    Layout = "_LayoutDashboard";

    var postUrl = (string)(ViewBag.PostUrl ?? "/admin/assignment/select");
    var leadText = (string)(ViewBag.LeadText ?? "Devam edebilmek için önce kongre seçin.");
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold mb-0">@ViewData["Title"]</h4>
            <small class="text-muted">@leadText</small>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-0">@TempData["ErrorMessage"]</div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form method="post" action="@postUrl">
                @Html.AntiForgeryToken()

                <label class="form-label fw-bold">Kongre</label>
                <select name="conferenceId" class="form-select" required>
                    <option value="">Seçiniz...</option>
                    @foreach (var c in Model)
                    {
                        <option value="@c.Id">
                            @c.Title (@c.Tenant?.Slug)
                        </option>
                    }
                </select>

                <button type="submit" class="btn btn-primary mt-3">
                    Devam Et
                </button>
            </form>
        </div>
    </div>
</div>
