@model IEnumerable<AntAbstract.Domain.Entities.ReviewForm>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5">@Localizer["PageTitle"]</h1>
        <p class="lead text-muted">@Localizer["PageLead"]</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> @Localizer["CreateNewButton"]
        </a>
    </p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        @Localizer["EmptyListMessage"]
    </div>
}
else
{
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>@Localizer["TableHeaderTitle"]</th>
                <th style="width: 35%;">@Localizer["TableHeaderActions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Title</strong></td>
                    <td>
                        <a asp-action="ManageCriteria" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-list-task me-1"></i> @Localizer["ManageCriteriaButton"]
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil me-1"></i> @Localizer["EditButton"]
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash me-1"></i> @Localizer["DeleteButton"]
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}