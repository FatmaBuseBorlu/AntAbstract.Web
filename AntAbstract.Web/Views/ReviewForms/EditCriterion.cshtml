@model AntAbstract.Domain.Entities.ReviewCriterion
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<p class="lead text-muted">@Localizer["PageLead"]</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCriterion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FormId" />

            <div class="mb-3">
                <label asp-for="QuestionText" class="form-label fw-bold">@Localizer["QuestionLabel"]</label>
                <textarea asp-for="QuestionText" class="form-control" rows="3"></textarea>
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CriterionType" class="form-label fw-bold">@Localizer["TypeLabel"]</label>
                <select asp-for="CriterionType" asp-items="ViewBag.CriterionTypes" class="form-select"></select>
                <span asp-validation-for="CriterionType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label fw-bold">@Localizer["OrderLabel"]</label>
                <input asp-for="DisplayOrder" type="number" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">@Localizer["SaveButton"]</button>
                <a asp-action="ManageCriteria" asp-route-id="@Model.FormId" class="btn btn-outline-secondary">@Localizer["CancelButton"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}