@model AntAbstract.Web.Models.ViewModels.AssignReviewerViewModel

@{
    ViewData["Title"] = "Hakem Ata";
}

<h1 class="display-5">@Model.Submission.Title</h1>
<p class="lead text-muted">"<strong>@Model.Submission.Author.DisplayName</strong>" tarafından gönderilen bu özete hakem atayın.</p>
<p><strong>Anahtar Kelimeler:</strong> <span class="badge bg-info">@Model.Submission.Keywords</span></p>
<hr />

<h4>
    <i class="bi bi-stars text-warning"></i> Önerilen Hakemler
</h4>
@if (!Model.RecommendedReviewers.Any())
{
    <div class="alert alert-secondary">Bu özet için uygun bir öneri bulunamadı.</div>
}
else
{
    <table class="table table-sm table-striped">
        <tbody>
            @foreach (var reviewer in Model.RecommendedReviewers)
            {
                <tr>
                    <td>@reviewer.DisplayName</td>
                    <td>@reviewer.Email</td>
                    <td><span class="badge bg-light text-dark">@reviewer.ExpertiseAreas</span></td>
                    <td>
                        <form asp-action="AssignReviewer" method="post">
                            <input type="hidden" name="submissionId" value="@Model.Submission.SubmissionId" />
                            <input type="hidden" name="reviewerId" value="@reviewer.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">Bu Hakemi Ata</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr class="my-4" />

<h4>Tüm Hakemler</h4>
<table class="table table-sm table-hover">
    <tbody>
        @foreach (var reviewer in Model.AllOtherReviewers)
        {
            <tr>
                <td>@reviewer.DisplayName</td>
                <td>@reviewer.Email</td>
                <td><span class="badge bg-light text-dark">@reviewer.ExpertiseAreas</span></td>
                <td>
                    <form asp-action="AssignReviewer" method="post">
                        <input type="hidden" name="submissionId" value="@Model.Submission.SubmissionId" />
                        <input type="hidden" name="reviewerId" value="@reviewer.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-primary">Ata</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>