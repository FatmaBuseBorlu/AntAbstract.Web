@model AntAbstract.Web.Models.ViewModels.AssignReviewerViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Model.Submission.Title</h1>
<p class="lead text-muted">@Localizer["PageLead", Model.Submission.Author.DisplayName]</p>
<p><strong>@Localizer["KeywordsLabel"]</strong> <span class="badge bg-info">@Model.Submission.Keywords</span></p>
<hr />

<h4>
    <i class="bi bi-stars text-warning"></i> @Localizer["RecommendedHeader"]
</h4>
@if (!Model.RecommendedReviewers.Any())
{
    <div class="alert alert-secondary">@Localizer["NoRecommendations"]</div>
}
else
{
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>@Localizer["TableHeaderName"]</th>
                <th>@Localizer["TableHeaderEmail"]</th>
                <th>@Localizer["TableHeaderExpertise"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reviewer in Model.RecommendedReviewers)
            {
                <tr>
                    <td>@reviewer.DisplayName</td>
                    <td>@reviewer.Email</td>
                    <td><span class="badge bg-light text-dark">@reviewer.ExpertiseAreas</span></td>
                    <td>
                        <form asp-action="AssignReviewer" method="post">
                            <input type="hidden" name="submissionId" value="@Model.Submission.SubmissionId" />
                            <input type="hidden" name="reviewerId" value="@reviewer.Id" />
                            <button type="submit" class="btn btn-sm btn-warning">@Localizer["AssignRecommendedBtn"]</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr class="my-4" />

<h4>@Localizer["AllReviewersHeader"]</h4>
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>@Localizer["TableHeaderName"]</th>
            <th>@Localizer["TableHeaderEmail"]</th>
            <th>@Localizer["TableHeaderExpertise"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reviewer in Model.AllOtherReviewers)
        {
            <tr>
                <td>@reviewer.DisplayName</td>
                <td>@reviewer.Email</td>
                <td><span class="badge bg-light text-dark">@reviewer.ExpertiseAreas</span></td>
                <td>
                    <form asp-action="AssignReviewer" method="post">
                        <input type="hidden" name="submissionId" value="@Model.Submission.SubmissionId" />
                        <input type="hidden" name="reviewerId" value="@reviewer.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-primary">@Localizer["AssignBtn"]</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>