@model IEnumerable<AntAbstract.Domain.Entities.Tenant>

@{
    ViewData["Title"] = "Kongreler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> Yeni Kongre Oluştur
        </a>
    </p>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Kongre Adı</th>
            <th>Kısa Ad (Slug)</th>
            <th style="width: 15%;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Slug</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>