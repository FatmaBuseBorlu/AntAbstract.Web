@model IEnumerable<AntAbstract.Domain.Entities.Tenant>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@Localizer["PageTitle"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> @Localizer["CreateNewButton"]
        </a>
    </p>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Localizer["TableHeaderName"]</th>
            <th>@Localizer["TableHeaderField"]</th>
            <th>@Localizer["TableHeaderType"]</th>
            <th style="width: 20%;">@Localizer["TableHeaderActions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@item.Name</strong><br />
                    <small class="text-muted">/@item.Slug</small>
                </td>
                <td>
                    @item.ScientificField?.Name
                </td>
                <td>
                    @item.CongressType?.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="@Localizer["EditButton"]"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="@Localizer["DetailsButton"]"><i class="bi bi-search"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="@Localizer["DeleteButton"]"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>