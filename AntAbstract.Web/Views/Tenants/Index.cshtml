@model IEnumerable<AntAbstract.Domain.Entities.Tenant>

@{
    ViewData["Title"] = "Kongre Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> Yeni Kongre Oluştur
        </a>
    </p>
</div>

<table class="table table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>Kongre Adı</th>
            <th>Bilimsel Alan</th>
            <th>Kongre Türü</th>
            <th style="width: 20%;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@item.Name</strong><br />
                    <small class="text-muted">/@item.Slug</small>
                </td>
                <td>
                    @* Soru işareti (?.), alan null ise hata vermesini engeller *@
                    @item.ScientificField?.Name
                </td>
                <td>
                    @item.CongressType?.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar"><i class="bi bi-search"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>