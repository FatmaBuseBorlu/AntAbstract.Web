@model AntAbstract.Domain.Entities.Tenant

@{
    ViewData["Title"] = "Kongre Düzenle";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Slug" class="control-label fw-bold"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ScientificFieldId" class="control-label fw-bold"></label>
                <select asp-for="ScientificFieldId" class="form-select" asp-items="ViewBag.ScientificFieldId">
                    <option value="">-- Alan Seçilmemiş --</option>
                </select>
                <span asp-validation-for="ScientificFieldId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CongressTypeId" class="control-label fw-bold"></label>
                <select asp-for="CongressTypeId" class="form-select" asp-items="ViewBag.CongressTypeId">
                    <option value="">-- Tür Seçilmemiş --</option>
                </select>
                <span asp-validation-for="CongressTypeId" class="text-danger"></span>
            </div>

            @* Eğer LogoUrl'i düzenleme ekranına da eklemek istersen, buraya ekleyebilirsin *@
            <div class="form-group mb-3">
                <label asp-for="LogoUrl" class="control-label fw-bold"></label>
                <input asp-for="LogoUrl" class="form-control" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}