@model AntAbstract.Domain.Entities.Tenant
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold">@Localizer["NameLabel"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Slug" class="control-label fw-bold">@Localizer["SlugLabel"]</label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ScientificFieldId" class="control-label fw-bold">@Localizer["FieldLabel"]</label>
                <select asp-for="ScientificFieldId" class="form-select" asp-items="ViewBag.ScientificFieldId">
                    <option value="">@Localizer["SelectField"]</option>
                </select>
                <span asp-validation-for="ScientificFieldId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CongressTypeId" class="control-label fw-bold">@Localizer["TypeLabel"]</label>
                <select asp-for="CongressTypeId" class="form-select" asp-items="ViewBag.CongressTypeId">
                    <option value="">@Localizer["SelectType"]</option>
                </select>
                <span asp-validation-for="CongressTypeId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LogoUrl" class="control-label fw-bold">@Localizer["LogoLabel"]</label>
                <input asp-for="LogoUrl" class="form-control" placeholder="https://example.com/logo.png" />
                <span asp-validation-for="LogoUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">@Localizer["CreateButton"]</button>
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["BackToListLink"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}