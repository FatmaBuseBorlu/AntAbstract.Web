@model AntAbstract.Domain.Entities.Tenant
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<h4 class="text-muted fw-light">@Model.Name</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3 fw-bold">
            @Localizer["NameLabel"]
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3 fw-bold">
            @Localizer["SlugLabel"]
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-3 fw-bold">
            @Localizer["FieldLabel"]
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ScientificField.Name)
        </dd>
        <dt class="col-sm-3 fw-bold">
            @Localizer["TypeLabel"]
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CongressType.Name)
        </dd>
        <dt class="col-sm-3 fw-bold">
            @Localizer["ThemeLabel"]
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ThemeJson)
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@Localizer["EditLink"]</a>
    <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["BackToListLink"]</a>
</div>