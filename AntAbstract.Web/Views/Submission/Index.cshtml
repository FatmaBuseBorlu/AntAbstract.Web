@using AntAbstract.Domain.Entities
@model IEnumerable<Submission>

@{
    ViewData["Title"] = "Özetlerim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> Yeni Özet Gönder
        </a>
    </p>
</div>
<p class="lead">
    Gönderdiğiniz özetlerin listesi ve güncel durumları bu sayfada görüntülenecektir.
</p>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        Henüz gönderilmiş bir özetiniz bulunmamaktadır. İlk özetinizi göndermek için yukarıdaki butonu kullanın.
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Durum</th>
                <th>Gönderim Tarihi</th>
                <th style="width: 25%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Title</strong></td>
                    <td>
                        @if (item.Status == "Kabul Edildi")
                        {
                            <span class="badge bg-success">@item.Status</span>
                        }
                        else if (item.Status == "Reddedildi")
                        {
                            <span class="badge bg-danger">@item.Status</span>
                        }
                        else if (item.Status == "Revizyon Tamamlandı")
                        {
                            <span class="badge bg-info">@item.Status</span>
                        }
                        else if (item.Status == "Küçük Revizyon Gerekli" || item.Status == "Büyük Revizyon Gerekli")
                        {
                            <span class="badge bg-warning text-dark">@item.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.Status</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-submissionId="@item.SubmissionId" class="btn btn-sm btn-outline-info">Detay</a>

                        @if (item.Status == "Küçük Revizyon Gerekli" || item.Status == "Büyük Revizyon Gerekli")
                        {
                            // Eğer revizyon istenmişse, "Revizyon Yükle" butonu göster
                            <a asp-action="UploadRevision" asp-route-id="@item.SubmissionId" class="btn btn-sm btn-success">Revizyon Yükle</a>
                        }
                        else if (item.Status == "Yeni Gönderildi")
                        {
                            // Sadece yeni gönderilmişse düzenleyip silebilsin
                            <a asp-action="Edit" asp-route-submissionId="@item.SubmissionId" class="btn btn-sm btn-outline-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-submissionId="@item.SubmissionId" class="btn btn-sm btn-outline-danger">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}