@using AntAbstract.Domain.Entities
@using AntAbstract.Web.Models.ViewModels
@model SubmissionListViewModel

@{
    ViewData["Title"] = "Bildirilerim";
    Layout = "_LayoutDashboard"; // Dashboard şablonunu kullanıyoruz
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">Bildirilerim Listesi</h4>
            <p class="text-muted small mb-0">Gönderdiğiniz tüm bilimsel çalışmaları buradan takip edebilirsiniz.</p>
        </div>
        <a href="/Submission/Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Yeni Bildiri Gönder
        </a>
    </div>

    <div class="card dashboard-card p-4">
        @if (Model.Submissions != null && Model.Submissions.Any())
        {
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th>Bildiri Başlığı & Yazarlar</th>
                        <th>Durum</th>
                        <th>Son Güncelleme</th>
                        <th style="width: 15%;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Submissions.Select((s, index) => new { Submission = s, Index = index }))
                    {
                        <tr>
                            <td>@(item.Index + 1)</td>
                            <td>
                                <strong class="text-dark">@item.Submission.Title</strong>
                                <small class="d-block text-muted">
                                    Yazar Sayısı: @(item.Submission.SubmissionAuthors.Count)
                                </small>
                            </td>
                            <td>
                                @* STATUS GÖRÜNTÜLEME (Enum'ı Türkçe ve Renkli Gösterir) *@
                                @switch (item.Submission.Status)
                                {
                                    case SubmissionStatus.New:
                                        <span class="badge bg-info">Yeni Gönderildi</span>
                                        break;
                                    case SubmissionStatus.UnderReview:
                                        <span class="badge bg-warning text-dark">Hakem Değerlendiriyor</span>
                                        break;
                                    case SubmissionStatus.RevisionRequired:
                                        <span class="badge bg-primary">Revizyon İsteniyor</span>
                                        break;
                                    case SubmissionStatus.Accepted:
                                        <span class="badge bg-success">Kabul Edildi</span>
                                        break;
                                    case SubmissionStatus.Rejected:
                                        <span class="badge bg-danger">Reddedildi</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">Bilinmiyor</span>
                                        break;
                                }
                            </td>
                            <td>@item.Submission.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a href="/Submission/Edit/@item.Submission.SubmissionId" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                                <a href="/Submission/Details/@item.Submission.SubmissionId" class="btn btn-sm btn-outline-info">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i> Henüz gönderilmiş bir bildiriniz bulunmamaktadır.
                <a href="/Submission/Create" class="alert-link fw-bold">Yeni Bildiri Gönderin.</a>
            </div>
        }
    </div>
</div>