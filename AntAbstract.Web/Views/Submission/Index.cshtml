@using AntAbstract.Domain.Entities
@model IEnumerable<Submission>

@{
    ViewData["Title"] = "Özetlerim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> Yeni Özet Gönder
        </a>
    </p>
</div>

<p class="lead">
    Gönderdiğiniz özetlerin listesi bu sayfada görüntülenecektir.
</p>

@* ✅ DÜZELTME: Modelin null veya boş olup olmadığını kontrol eder *@
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        Henüz gönderilmiş bir özetiniz bulunmamaktadır. İlk özetinizi göndermek için yukarıdaki butonu kullanın.
    </div>
}
else
{
    <h3>Gönderilen Özetler (@Model.Count() Adet)</h3>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Özet Metni (İlk 100 Karakter)</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.Title</strong></td>
                    <td>@(item.AbstractText?.Length > 100 ? item.AbstractText.Substring(0, 100) + "..." : item.AbstractText)</td>
                    <td>@item.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-info me-2">Detay</a>
                        <a href="#" class="btn btn-sm btn-warning">Düzenle</a>
                        @* İleride silme butonu buraya gelecek *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}