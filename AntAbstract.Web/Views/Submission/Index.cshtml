@using AntAbstract.Application.DTOs.Submission
@using AntAbstract.Domain.Entities
@model List<SubmissionDto>

@{
    ViewData["Title"] = "Bildirilerim";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Bildirilerim</h4>
            <p class="text-muted small mb-0">Bilimsel çalışmalarınızın durumunu buradan takip edebilirsiniz.</p>
        </div>
        <a href="/Submission/Create" class="btn btn-primary fw-bold shadow-sm">
            <i class="fas fa-plus me-2"></i> Yeni Bildiri Gönder
        </a>
    </div>

    <div class="card dashboard-card border-0 shadow-sm">
        <div class="card-body p-0">

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase small fw-bold text-muted">
                            <tr>
                                <th class="ps-4" style="width: 5%;">#</th>
                                <th style="width: 35%;">Çalışma Başlığı</th>
                                <th style="width: 20%;">Kongre</th>
                                <th style="width: 10%;">Durum</th>
                                <th style="width: 15%;">Tarih</th>
                                <th class="text-end pe-4" style="width: 15%;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.Select((s, index) => new { Item = s, Index = index }))
                            {
                                var item = row.Item; // DTO Nesnesi

                                // DTO'dan gelen String status'ü Enum'a çeviriyoruz (Renkler için)
                                SubmissionStatus statusEnum = SubmissionStatus.New;
                                Enum.TryParse<SubmissionStatus>(item.Status, out statusEnum);

                                <tr>
                                    <td class="ps-4 text-muted">@(row.Index + 1)</td>
                                    <td>
                                        <span class="d-block fw-bold text-dark text-truncate" style="max-width: 350px;">
                                            @item.Title
                                        </span>
                                        <span class="d-block small text-muted mt-1">
                                            <i class="fas fa-users me-1"></i> @(item.Authors?.Count ?? 0) Yazar
                                            @if (!string.IsNullOrEmpty(item.Keywords))
                                            {
                                                <span class="mx-2">•</span>
                                                <i class="fas fa-tag me-1"></i>
                                                @item.Keywords.Split(',').FirstOrDefault()
                                            }
                                        </span>
                                    </td>

                                    <td>
                                        <span class="badge bg-light text-dark border fw-normal">
                                            <i class="fas fa-building me-1 text-secondary"></i>
                                            @(item.ConferenceTitle ?? "Belirtilmemiş")
                                        </span>
                                    </td>

                                    <td>
                                        @switch (statusEnum)
                                        {
                                            case SubmissionStatus.New:
                                            case SubmissionStatus.Pending:
                                                <span class="badge bg-primary-subtle text-primary border border-primary-subtle px-2 py-1 rounded-2">Yeni</span>
                                                break;
                                            case SubmissionStatus.UnderReview:
                                                <span class="badge bg-warning-subtle border border-warning-subtle px-2 py-1 rounded-2" style="color:#ffc107;">
                                                    İnceleniyor
                                                </span>
                                                break;
                                            case SubmissionStatus.RevisionRequired:
                                                <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle px-2 py-1 rounded-2">Revizyon</span>
                                                break;
                                            case SubmissionStatus.Accepted:
                                                <span class="badge bg-success-subtle text-success border border-success-subtle px-2 py-1 rounded-2">Kabul Edildi</span>
                                                break;
                                            case SubmissionStatus.Rejected:
                                                <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-2 py-1 rounded-2">Reddedildi</span>
                                                break;
                                            case SubmissionStatus.Presented:
                                                <span class="badge bg-primary border border-primary px-2 py-1 rounded-2">Sunuldu</span>
                                                break;
                                            case SubmissionStatus.Withdrawn:
                                                <span class="badge bg-secondary border border-secondary px-2 py-1 rounded-2">Geri Çekildi</span>
                                                break;
                                            default:
                                                <span class="badge bg-light text-dark border">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-muted small">
                                        <div class="d-flex align-items-center">
                                            <i class="far fa-calendar-alt me-2"></i>
                                            <div>
                                                <span>@item.CreatedDate.ToLocalTime().ToString("dd MMM yyyy")</span>
                                                <span class="d-block text-xs opacity-75">@item.CreatedDate.ToLocalTime().ToString("HH:mm")</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark fw-bold">
                                            <i class="fas fa-eye me-1"></i> Detay
                                        </a>

                                        @if (statusEnum == SubmissionStatus.New || statusEnum == SubmissionStatus.RevisionRequired)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary ms-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <div class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fas fa-folder-open fa-3x text-muted opacity-25"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold text-dark">Henüz bir bildiri göndermediniz</h5>
                    <p class="text-muted small mb-4">Kongreye katılmak için ilk bilimsel çalışmanızı sisteme yükleyin.</p>
                    <a href="/Submission/Create" class="btn btn-primary px-4">
                        Bildiri Gönder
                    </a>
                </div>
            }
        </div>
    </div>
</div>