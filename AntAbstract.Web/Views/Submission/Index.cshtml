@using AntAbstract.Domain.Entities
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model IEnumerable<Submission>

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5">@Localizer["PageTitle"]</h1>
        <p class="lead text-muted">@Localizer["PageLead"]</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> @Localizer["SubmitNewButton"]
        </a>
    </p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        @Localizer["EmptyListMessage"]
    </div>
}
else
{
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>@Localizer["TableHeaderTitle"]</th>
                <th>@Localizer["TableHeaderStatus"]</th>
                <th>@Localizer["TableHeaderDate"]</th>
                <th style="width: 25%;">@Localizer["TableHeaderActions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var statusClass = "bg-secondary";
                var statusText = Localizer[item.Status.ToString()];

                if (item.Status == SubmissionStatus.Accepted)
                {
                    statusClass = "bg-success";
                }
                else if (item.Status == SubmissionStatus.Rejected)
                {
                    statusClass = "bg-danger";
                }
                else if (item.Status == SubmissionStatus.UnderReview)
                {
                    statusClass = "bg-info";
                }
                else if (item.Status == SubmissionStatus.RevisionRequired)
                {
                    statusClass = "bg-warning text-dark";
                }

                <tr>
                    <td><strong>@item.Title</strong></td>

                    <td>
                        <span class="badge @statusClass">@statusText</span>
                    </td>

                    <td>@item.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")</td>

                    <td>
                        <a asp-action="Details"
                           asp-route-submissionId="@item.SubmissionId"
                           class="btn btn-sm btn-outline-info">
                            @Localizer["DetailsButton"]
                        </a>

                        @if (item.Status == SubmissionStatus.RevisionRequired)
                        {
                            <a asp-action="UploadRevision"
                               asp-route-id="@item.SubmissionId"
                               class="btn btn-sm btn-success">
                                @Localizer["UploadRevisionButton"]
                            </a>
                        }
                        else if (item.Status == SubmissionStatus.New)
                        {
                            <a asp-action="Edit"
                               asp-route-submissionId="@item.SubmissionId"
                               class="btn btn-sm btn-outline-warning">
                                @Localizer["EditButton"]
                            </a>

                            <a asp-action="Delete"
                               asp-route-submissionId="@item.SubmissionId"
                               class="btn btn-sm btn-outline-danger">
                                @Localizer["DeleteButton"]
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
