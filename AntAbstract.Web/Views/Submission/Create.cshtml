@using AntAbstract.Web.Models.ViewModels
@model SubmissionCreateViewModel

@{
    ViewData["Title"] = "Yeni Bildiri Gönder";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">Yeni Bildiri Gönder</h4>
            <p class="text-muted small mb-0">Bilimsel çalışmanızı sisteme yükleyin.</p>
        </div>
        <a href="/Dashboard" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Geri Dön
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card dashboard-card border-0 shadow-sm">
                <div class="card-body p-4">

                    <form asp-action="Create" enctype="multipart/form-data" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-4" role="alert"></div>

                        <h5 class="fw-bold text-dark mb-3"><i class="fas fa-file-signature me-2 text-primary"></i> 1. Çalışma Bilgileri</h5>

                        <div class="card bg-light border-primary mb-4">
                            <div class="card-body">
                                <label asp-for="ConferenceId" class="form-label fw-bold text-primary">
                                    <i class="fas fa-globe me-1"></i> Başvuru Yapılacak Kongre <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ConferenceId" asp-items="Model.AvailableConferences" class="form-select form-select-lg border-primary">
                                    <option value="">-- Lütfen Kongre Seçiniz --</option>
                                </select>
                                <span asp-validation-for="ConferenceId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold text-dark">Bildiri Başlığı <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control form-control-lg bg-light border-0" placeholder="Çalışmanızın başlığını giriniz..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label fw-bold text-dark">Sunum Türü</label>
                                <select asp-for="PresentationTypeId" class="form-select bg-light border-0">
                                    <option value="0">Sözlü Sunum</option>
                                    <option value="1">Poster Sunum</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Keywords" class="form-label fw-bold text-dark">Anahtar Kelimeler</label>
                                <input asp-for="Keywords" class="form-control bg-light border-0" placeholder="Örn: Yapay Zeka, Veri Madenciliği..." />
                                <span asp-validation-for="Keywords" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AbstractText" class="form-label fw-bold text-dark">Özet Metni <span class="text-danger">*</span></label>
                            <textarea asp-for="AbstractText" id="AbstractText" class="form-control bg-light border-0" rows="8" placeholder="Özetinizi buraya yapıştırın veya yazın..."></textarea>
                            <span asp-validation-for="AbstractText" class="text-danger small"></span>
                            <div class="form-text text-end" id="wordCount">0 kelime</div>
                        </div>

                        <hr class="my-5">

                        <h5 class="fw-bold text-dark mb-3"><i class="fas fa-users me-2 text-primary"></i> 2. Ortak Yazarlar (Co-Authors)</h5>
                        <div class="alert alert-info small">
                            <i class="fas fa-info-circle me-1"></i> Bildiriyi sisteme yükleyen yazar (siz) otomatik olarak 1. yazar kabul edilir. Lütfen diğer yazarları ekleyin.
                        </div>

                        <div id="author-list"></div>

                        <div class="mb-4 text-start">
                            <button type="button" class="btn btn-outline-primary fw-bold" id="add-author-btn">
                                <i class="fas fa-plus me-1"></i> Yeni Yazar Ekle
                            </button>
                            <span asp-validation-for="Authors" class="text-danger small d-block"></span>
                        </div>

                        <hr class="my-5">

                        <h5 class="fw-bold text-dark mb-3"><i class="fas fa-cloud-upload-alt me-2 text-primary"></i> 3. Dosya Yükleme</h5>
                        <div class="mb-4">
                            <label asp-for="SubmissionFile" class="form-label fw-bold text-dark">
                                Tam Metin Dosyası <span class="text-muted fw-normal">(Opsiyonel)</span>
                            </label>

                            <div class="p-4 bg-light border border-2 border-dashed rounded-3 text-center">
                                <i class="fas fa-file-upload fa-3x text-muted mb-3"></i>
                                <p class="mb-2">Dosyanızı sürükleyin veya seçmek için tıklayın</p>
                                <input asp-for="SubmissionFile" type="file" class="form-control" accept=".pdf, .docx" />
                                <small class="text-muted">Varsa PDF veya Word dosyası yükleyebilirsiniz.</small>
                            </div>
                            <span asp-validation-for="SubmissionFile" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary btn-lg px-5" style="background-color: #00aeef; border: none;">
                                <i class="fas fa-paper-plane me-2"></i> BİLDİRİYİ GÖNDER
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {

            function updateWordCount() {
                var text = $('#AbstractText').val();
                var cleanText = text.replace(/(^\s*)|(\s*$)/gi, "").replace(/[ ]{2,}/gi, " ").replace(/\n /, "\n");
                var wordCount = cleanText.split(' ').filter(function(str) { return str !== ""; }).length;
                var maxWords = 500;

                var countElement = $('#wordCount');
                countElement.text(wordCount + ' kelime');

                if (wordCount > maxWords) {
                    countElement.removeClass('text-muted').addClass('text-danger');
                    countElement.html('<span class="fw-bold">' + wordCount + '</span> kelime (Limit: ' + maxWords + ')');
                } else {
                    countElement.removeClass('text-danger').addClass('text-muted');
                }
            }
            $('#AbstractText').on('input', updateWordCount);

            let authorIndex = 0;

            function getAuthorRowTemplate(index) {
                return `
                    <div class="row g-3 mb-3 p-3 rounded-3 border author-row bg-white shadow-sm">
                        <input type="hidden" name="Authors.Index" value="${index}" />

                        <div class="col-md-3">
                            <label class="small text-muted mb-1">Adı*</label>
                            <input name="Authors[${index}].FirstName" class="form-control form-control-sm" placeholder="Adı" required />
                        </div>
                        <div class="col-md-3">
                            <label class="small text-muted mb-1">Soyadı*</label>
                            <input name="Authors[${index}].LastName" class="form-control form-control-sm" placeholder="Soyadı" required />
                        </div>
                        <div class="col-md-4">
                            <label class="small text-muted mb-1">Kurum*</label>
                            <input name="Authors[${index}].Institution" class="form-control form-control-sm" placeholder="Üniversite/Kurum Adı" required />
                        </div>

                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger btn-sm w-100 remove-author-btn">
                                <i class="fas fa-trash-alt me-1"></i> Kaldır
                            </button>
                            <input type="hidden" name="Authors[${index}].Order" value="${index + 1}" />
                            <input type="hidden" name="Authors[${index}].IsCorrespondingAuthor" value="false" />
                        </div>

                        <div class="col-md-4">
                            <label class="small text-muted mb-1">E-Posta</label>
                            <input name="Authors[${index}].Email" class="form-control form-control-sm" type="email" placeholder="E-Posta Adresi" />
                        </div>
                        <div class="col-md-4">
                            <label class="small text-muted mb-1">ORCID</label>
                            <input name="Authors[${index}].ORCID" class="form-control form-control-sm" placeholder="ORCID No (Opsiyonel)" />
                        </div>
                        <div class="col-md-4 d-flex align-items-center justify-content-end">
                            <div class="form-check mt-3">
                                <input class="form-check-input" type="checkbox" name="Authors[${index}].IsCorrespondingAuthor" value="true">
                                <label class="form-check-label small">Sorumlu Yazar?</label>
                            </div>
                        </div>
                    </div>
                `;
            }

            function addAuthorRow() {
                $('#author-list').append(getAuthorRowTemplate(authorIndex));
                authorIndex++;
            }

            $('#add-author-btn').click(addAuthorRow);

            $(document).on('click', '.remove-author-btn', function () {
                $(this).closest('.author-row').remove();
            });
        });
    </script>
}