@model AntAbstract.Domain.Entities.Submission
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<p class="lead text-muted">@Localizer["PageLead"]</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">@Localizer["TitleLabel"]</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AbstractText" class="form-label fw-bold">@Localizer["AbstractTextLabel"]</label>
                <textarea asp-for="AbstractText" class="form-control" rows="8"></textarea>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Keywords" class="control-label fw-bold">@Localizer["KeywordsLabel"]</label>
                <textarea asp-for="Keywords" class="form-control" rows="3"></textarea>
                <small class="form-text text-muted">@Localizer["KeywordsHelpText"]</small>
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="submissionFile" class="form-label fw-bold">@Localizer["FileLabel"]</label>
                <input type="file" name="submissionFile" class="form-control" required />
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">@Localizer["SubmitButton"]</button>
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["CancelButton"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}