@model AntAbstract.Domain.Entities.Submission

@{
    ViewData["Title"] = "Yeni Özet Gönder";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AbstractText" class="form-label fw-bold">Özet Metni</label>
                <textarea asp-for="AbstractText" class="form-control" rows="8"></textarea>
                <span asp-validation-for="AbstractText" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="submissionFile" class="form-label fw-bold">Özet Dosyası (PDF, DOC, DOCX)</label>
                <input type="file" name="submissionFile" class="form-control" required />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Gönder" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}