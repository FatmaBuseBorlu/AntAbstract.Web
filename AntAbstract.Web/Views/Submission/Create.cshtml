@model AntAbstract.Domain.Entities.Submission

@{
    ViewData["Title"] = "Yeni Özet Gönder";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<p class="lead">Lütfen bildiri bilgilerinizi ve özet dosyanızı forma girin.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Başlık</label>
                <input asp-for="Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AbstractText" class="form-label fw-bold">Özet Metni (Opsiyonel)</label>
                <textarea asp-for="AbstractText" class="form-control" rows="8"></textarea>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Keywords" class="control-label fw-bold">Anahtar Kelimeler</label>
                <textarea asp-for="Keywords" class="form-control" rows="3"></textarea>
                <small class="form-text text-muted">Lütfen anahtar kelimeleri virgülle (,) ayırarak girin.</small>
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="submissionFile" class="form-label fw-bold">Özet Dosyası (PDF, DOC, DOCX)</label>
                <input type="file" name="submissionFile" class="form-control" required />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Gönder" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}