@model AntAbstract.Domain.Entities.Submission
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<p class="lead text-muted">@Model.Title</p>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="SubmissionId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">@Localizer["TitleLabel"]</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AbstractText" class="form-label fw-bold">@Localizer["AbstractTextLabel"]</label>
                <textarea asp-for="AbstractText" class="form-control" rows="8"></textarea>
                <span asp-validation-for="AbstractText" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Keywords" class="control-label fw-bold">@Localizer["KeywordsLabel"]</label>
                <textarea asp-for="Keywords" class="form-control" rows="3"></textarea>
                <small class="form-text text-muted">@Localizer["KeywordsHelpText"]</small>
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold">@Localizer["CurrentFileLabel"]</label>
                <p><a href="@Model.FilePath" target="_blank">@Model.FilePath</a></p>
                <label for="newSubmissionFile" class="form-label fw-bold">@Localizer["ChangeFileLabel"]</label>
                <input type="file" name="newSubmissionFile" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">@Localizer["SaveButton"]</button>
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["CancelButton"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}