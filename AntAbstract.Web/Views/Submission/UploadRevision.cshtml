@using AntAbstract.Application.DTOs.Submission
@model SubmissionDto

@{
    ViewData["Title"] = "Revizyon Yükle";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0 text-dark">Revizyon Yükle</h4>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Detaya Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h6 class="fw-bold text-primary">Hakem Düzeltme İstiyor</h6>
                    <p class="text-muted small">Çalışmanız incelendi ve bazı düzeltmeler talep edildi. Lütfen hakem yorumlarını dikkate alarak çalışmanızı güncelleyiniz.</p>

                    <div class="alert alert-warning small border-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Lütfen düzeltilmiş dosyanızı (Word/PDF) sağ taraftaki alandan yükleyiniz.
                    </div>

                    <h6 class="fw-bold small mt-4">Mevcut Dosya:</h6>
                    @if (Model.Files != null && Model.Files.Any())
                    {
                        var lastFile = Model.Files.OrderByDescending(f => f.UploadedAt).FirstOrDefault();
                        <div class="d-flex align-items-center bg-light p-2 rounded border">
                            <i class="fas fa-file-alt text-secondary me-3 fa-2x"></i>
                            <div>
                                <span class="d-block fw-bold text-dark small">@lastFile.FileName</span>
                                <span class="d-block text-muted x-small">V.@lastFile.Version - @lastFile.UploadedAt.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card border-0 shadow-sm border-top border-4 border-warning">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Yeni Dosya Yükle</h5>

                    <form asp-action="UploadRevision" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted">Düzeltilmiş Tam Metin Dosyası</label>
                            <input type="file" name="revisionFile" class="form-control" accept=".doc,.docx,.pdf" required />
                            <div class="form-text">Lütfen değişiklikleri içeren son sürümü yükleyiniz (.doc, .docx, .pdf).</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning fw-bold text-dark shadow-sm py-2">
                                <i class="fas fa-cloud-upload-alt me-2"></i> Revizyonu Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>