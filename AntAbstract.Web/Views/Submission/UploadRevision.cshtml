@model AntAbstract.Domain.Entities.Submission
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<h4 class="text-muted fw-light">"@Model.Title"</h4>
<p class="lead">@Localizer["PageLead"]</p>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="UploadRevision" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="SubmissionId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">@Localizer["TitleLabel"]</label>
                <input asp-for="Title" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="AbstractText" class="form-label fw-bold">@Localizer["AbstractTextLabel"]</label>
                <textarea asp-for="AbstractText" class="form-control" rows="8"></textarea>
            </div>

            <div class="mb-3">
                <label for="revisionFile" class="form-label fw-bold">@Localizer["FileLabel"]</label>
                <p class="text-muted">@Localizer["CurrentFile"] <a href="@Model.FilePath" target="_blank">@Model.FilePath</a></p>
                <input type="file" name="revisionFile" class="form-control" required />
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">@Localizer["SubmitButton"]</button>
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["CancelButton"]</a>
            </div>
        </form>
    </div>
</div>