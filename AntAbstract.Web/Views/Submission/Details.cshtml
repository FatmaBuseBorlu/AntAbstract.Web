@using AntAbstract.Domain.Entities
@model AntAbstract.Domain.Entities.Submission

@{
    ViewData["Title"] = "Bildiri Detayı";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">Bildiri Detayı</h4>
            <p class="text-muted small mb-0">Referans No: #@Model.SubmissionId.ToString().Substring(0, 8).ToUpper()</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="row g-4 mb-4">
        
        <div class="col-md-4">
            <div class="card dashboard-card border-0 h-100 p-3 shadow-sm">
                <h6 class="fw-bold text-muted small text-uppercase">Mevcut Durum</h6>
                <div class="mt-2">
                    @switch (Model.Status)
                    {
                        case SubmissionStatus.New:
                            <span class="badge bg-primary fs-6 px-3 py-2">Yeni Gönderildi</span>
                            break;
                        case SubmissionStatus.UnderReview:
                            <span class="badge bg-warning text-dark fs-6 px-3 py-2">Hakem Değerlendiriyor</span>
                            break;
                        case SubmissionStatus.RevisionRequired:
                            <span class="badge bg-info text-dark fs-6 px-3 py-2">Revizyon İsteniyor</span>
                            break;
                        case SubmissionStatus.Accepted:
                            <span class="badge bg-success fs-6 px-3 py-2">Kabul Edildi</span>
                            break;
                        case SubmissionStatus.Rejected:
                            <span class="badge bg-danger fs-6 px-3 py-2">Reddedildi</span>
                            break;
                        case SubmissionStatus.Presented:
                            <span class="badge bg-primary fs-6 px-3 py-2">Sunuldu (Tamamlandı)</span>
                            break;
                        case SubmissionStatus.Withdrawn:
                            <span class="badge bg-secondary fs-6 px-3 py-2">Geri Çekildi</span>
                            break;
                        default:
                            <span class="badge bg-light text-dark border fs-6 px-3 py-2">@Model.Status</span>
                            break;
                    }
                </div>
                <small class="text-muted mt-2 d-block">Son Güncelleme: @(Model.DecisionDate?.ToString("dd MMM yyyy") ?? Model.CreatedAt.ToString("dd MMM yyyy"))</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card border-0 h-100 p-3 shadow-sm">
                <h6 class="fw-bold text-muted small text-uppercase">İşlemler</h6>
                <div class="mt-2">
                    
                    @if (Model.Status == SubmissionStatus.RevisionRequired)
                    {
                        <div class="alert alert-warning mb-2 small border-warning p-2">
                            <i class="fas fa-exclamation-triangle me-1"></i> Düzeltme talep edildi.
                        </div>
                        <a asp-action="UploadRevision" asp-route-id="@Model.SubmissionId" class="btn btn-sm btn-warning w-100 fw-bold text-dark">
                            <i class="fas fa-upload me-1"></i> Revizyon Yükle
                        </a>
                    }
                    else if (Model.Status == SubmissionStatus.Accepted)
                    {
                        <div class="alert alert-success mb-2 small border-success p-2">
                            <i class="fas fa-check-circle me-1"></i> Bildiriniz kabul edildi.
                        </div>

                        <div class="alert alert-info p-2 small border-info mb-2">
                            <i class="fas fa-info-circle me-1"></i> Katılım Belgesi, sunum yapıldıktan sonra aktif olacaktır.
                        </div>
                        
                        <button class="btn btn-sm btn-primary w-100 fw-bold shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#uploadPresentationCollapse">
                            <i class="fas fa-file-powerpoint me-1"></i> Sunum Dosyası Yükle
                        </button>
                        
                        <div class="collapse mt-2" id="uploadPresentationCollapse">
                            <div class="card card-body p-2 bg-light border small">
                                <form asp-action="UploadPresentation" method="post" enctype="multipart/form-data">
                                    <input type="hidden" name="id" value="@Model.SubmissionId" />
                                    <div class="input-group input-group-sm mb-1">
                                        <input type="file" name="presentationFile" class="form-control" accept=".ppt,.pptx,.pdf" required>
                                        <button class="btn btn-dark" type="submit">Yükle</button>
                                    </div>
                                    <span class="text-muted" style="font-size:0.7rem;">(PPT, PPTX veya PDF)</span>
                                </form>
                            </div>
                        </div>
                    }
                    else if (Model.Status == SubmissionStatus.Presented)
                    {
                        @if (Model.IsFeedbackGiven)
                        {
                            // Anket yapıldı -> Sertifika İndir
                            <div class="alert alert-success p-2 small border-success mb-1">
                                <i class="fas fa-check-circle me-1"></i> Tebrikler! Belgeniz hazır.
                            </div>
                            <a asp-action="DownloadAcceptanceLetter" asp-route-id="@Model.SubmissionId" target="_blank" class="btn btn-sm btn-success w-100 fw-bold mb-2 shadow-sm">
                                <i class="fas fa-certificate me-1"></i> Katılım Belgesi İndir
                            </a>
                        }
                        else
                        {
                            // Anket yapılmadı -> Önce Anket
                            <div class="alert alert-warning p-2 small border-warning mb-1">
                                <i class="fas fa-lock me-1"></i> Belge için lütfen anketi doldurunuz.
                            </div>
                            <a asp-controller="Survey" asp-action="Index" asp-route-submissionId="@Model.SubmissionId" class="btn btn-sm btn-warning w-100 text-dark fw-bold mb-2 shadow-sm">
                                <i class="fas fa-poll-h me-2"></i> Değerlendirme Anketi
                            </a>
                            <button class="btn btn-sm btn-outline-secondary w-100 disabled mb-2" disabled>
                                <i class="fas fa-certificate me-1"></i> Katılım Belgesi (Kilitli)
                            </button>
                        }
                    }
                    else if (Model.Status == SubmissionStatus.Withdrawn)
                    {
                        <div class="alert alert-secondary mb-0 small border p-2">
                            <i class="fas fa-ban me-1"></i> Bu bildiri geri çekilmiştir.
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">Şu an yapmanız gereken bir işlem bulunmuyor.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card border-0 h-100 p-3 shadow-sm">
                <h6 class="fw-bold text-muted small text-uppercase">Belgeler & Destek</h6>
                <div class="d-grid gap-2 mt-2">
                    
                   @if (Model.Status == SubmissionStatus.Accepted || Model.Status == SubmissionStatus.Presented)
{
     <a asp-action="DownloadBadge" asp-route-id="@Model.SubmissionId" target="_blank" class="btn btn-sm btn-outline-dark text-start">
        <i class="fas fa-id-badge me-2"></i> Yaka Kartı Oluştur
    </a>
}
else
{
    <button class="btn btn-sm btn-light text-muted text-start border disabled" disabled>
        <i class="fas fa-id-badge me-2"></i> Yaka Kartı (Henüz Onaylanmadı)
    </button>
}   
                    <button class="btn btn-sm btn-outline-secondary text-start disabled" disabled>
                        <i class="fas fa-file-invoice-dollar me-2"></i> Fatura/Dekont (Yakında)
                    </button>

                    @if (Model.Status == SubmissionStatus.Accepted || Model.Status == SubmissionStatus.Presented)
                    {
                        <div class="mt-2">
                            <button class="btn btn-sm btn-light text-muted text-start w-100 border disabled" disabled>
                                <i class="fas fa-ban me-2"></i> Geri Çekme Devre Dışı
                            </button>
                            <div class="form-text x-small text-muted ps-1">
                                * Kabul edilen bildiriler sistem üzerinden geri çekilemez.
                            </div>
                        </div>
                    }
                    else if (Model.Status != SubmissionStatus.Withdrawn && Model.Status != SubmissionStatus.Rejected)
                    {
                        <form asp-action="Withdraw" method="post" onsubmit="return confirm('Bu bildiriyi geri çekmek istediğinize emin misiniz? Bu işlem geri alınamaz.');" class="d-grid mt-2">
                            <input type="hidden" name="id" value="@Model.SubmissionId" />
                            <button type="submit" class="btn btn-sm btn-outline-danger text-start">
                                <i class="fas fa-ban me-2"></i> Bildiriyi Geri Çek
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

    </div>

    <div class="card dashboard-card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4">
            <ul class="nav nav-tabs card-header-tabs" id="detailTabs" role="tablist">
                <li class="nav-item"><button class="nav-link active fw-bold" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">Bildiri Özeti</button></li>
                <li class="nav-item"><button class="nav-link fw-bold" id="authors-tab" data-bs-toggle="tab" data-bs-target="#authors" type="button">Yazarlar</button></li>
                <li class="nav-item"><button class="nav-link fw-bold" id="files-tab" data-bs-toggle="tab" data-bs-target="#files" type="button">Dosya Geçmişi</button></li>
                <li class="nav-item"><button class="nav-link fw-bold" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button">Hakem Yorumları</button></li>
            </ul>
        </div>
        
        <div class="card-body p-4">
            <div class="tab-content" id="detailTabsContent">
                
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <h5 class="fw-bold text-dark mb-3">@Model.Title</h5>
                    <div class="p-3 bg-light rounded border">
                        <p class="mb-0" style="white-space: pre-wrap; line-height: 1.7;">@Model.AbstractText</p>
                    </div>
                    <div class="mt-3">
                        <strong class="text-primary">Anahtar Kelimeler:</strong> <span class="text-muted">@Model.Keywords</span>
                    </div>
                </div>

                <div class="tab-pane fade" id="authors" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="bg-light">
                                <tr><th>Sıra</th><th>Ad Soyad</th><th>Kurum</th><th>Email</th><th>Durum</th></tr>
                            </thead>
                            <tbody>
                                @if (Model.SubmissionAuthors != null)
                                {
                                    @foreach (var author in Model.SubmissionAuthors.OrderBy(a => a.Order))
                                    {
                                        <tr>
                                            <td>@author.Order</td>
                                            <td class="fw-bold">@author.FirstName @author.LastName</td>
                                            <td>@author.Institution</td>
                                            <td>@author.Email</td>
                                            <td>
                                                @if (author.IsCorrespondingAuthor) { <span class="badge bg-info text-dark">Sorumlu Yazar</span> }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="files" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="bg-light">
                                <tr><th>Versiyon</th><th>Dosya Adı</th><th>Tip</th><th>Yükleme Tarihi</th><th>İşlem</th></tr>
                            </thead>
                            <tbody>
                                @if (Model.Files != null && Model.Files.Any())
                                {
                                    @foreach (var file in Model.Files.OrderByDescending(f => f.UploadedAt))
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">V.@file.Version</span></td>
                                            <td>@file.FileName</td>
                                            <td>
                                                @if(file.Type == SubmissionFileType.Presentation) { <span class="badge bg-primary">Sunum</span> }
                                                else { <span class="badge bg-light text-dark border">Tam Metin</span> }
                                            </td>
                                            <td>@file.UploadedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <a href="@file.FilePath" target="_blank" class="btn btn-sm btn-primary"><i class="fas fa-download me-1"></i> İndir</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5" class="text-center text-muted">Dosya bulunamadı.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="reviews" role="tabpanel">
                    @if (Model.ReviewAssignments != null && Model.ReviewAssignments.Any(r => r.Review != null))
                    {
                        @foreach (var assignment in Model.ReviewAssignments.Where(r => r.Review != null))
                        {
                            <div class="card mb-3 border-warning">
                                <div class="card-header bg-warning bg-opacity-10 border-warning">
                                    <strong class="text-dark">Hakem Değerlendirmesi</strong>
                                    <span class="float-end badge bg-white text-dark border">@assignment.Review.Recommendation</span>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title text-muted small fw-bold">Yazara Notlar:</h6>
                                    <p class="card-text">@assignment.Review.CommentsToAuthor</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info"><i class="fas fa-info-circle me-2"></i> Henüz değerlendirme sonucu yok.</div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>