@using AntAbstract.Domain.Entities
@using AntAbstract.Application.DTOs.Submission
@model SubmissionDto

@{
    ViewData["Title"] = "Bildiri Detayı";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    
    SubmissionStatus currentStatus = SubmissionStatus.New;
    if (Enum.TryParse<SubmissionStatus>(Model.Status, out var parsedStatus))
    {
        currentStatus = parsedStatus;
    }
}

<div class="container-fluid">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">Bildiri Detayı</h4>
            <p class="text-muted small mb-0">Referans No: #@Model.Id.ToString().Substring(0, 8).ToUpper()</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <h6 class="fw-bold text-muted text-uppercase small mb-4">Bildiri Süreci</h6>
            
            <div class="position-relative m-4">
                <div class="progress" style="height: 2px;">
                    @{
                        int progressVal = 0;
                        if (currentStatus == SubmissionStatus.New || currentStatus == SubmissionStatus.Pending) { progressVal = 15; }
                        else if (currentStatus == SubmissionStatus.UnderReview || currentStatus == SubmissionStatus.RevisionRequired) { progressVal = 50; }
                        else if (currentStatus == SubmissionStatus.Accepted || currentStatus == SubmissionStatus.Rejected) { progressVal = 85; }
                        else if (currentStatus == SubmissionStatus.Presented) { progressVal = 100; }
                    }
                    <div class="progress-bar bg-success" role="progressbar" style="width: @progressVal%;" aria-valuenow="@progressVal" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                
                <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm @(progressVal >= 15 ? "btn-success" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem;">1</button>
                <div class="position-absolute top-0 start-0 translate-middle mt-4 text-center" style="width: 100px;">
                    <small class="fw-bold @(progressVal >= 15 ? "text-success" : "text-muted")">Gönderildi</small>
                </div>

                <button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm @(progressVal >= 50 ? "btn-success" : "btn-secondary") rounded-pill" style="width: 2rem; height:2rem;">2</button>
                <div class="position-absolute top-0 start-50 translate-middle mt-4 text-center" style="width: 120px;">
                    <small class="fw-bold @(progressVal >= 50 ? "text-success" : "text-muted")">Değerlendirme</small>
                </div>

                <button type="button" class="position-absolute top-0 translate-middle btn btn-sm @(progressVal >= 85 ? "btn-success" : "btn-secondary") rounded-pill" style="left: 85%; width: 2rem; height:2rem;">3</button>
                <div class="position-absolute top-0 translate-middle mt-4 text-center" style="left: 85%; width: 100px;">
                    <small class="fw-bold @(progressVal >= 85 ? "text-success" : "text-muted")">Karar</small>
                </div>

                @if(currentStatus == SubmissionStatus.Presented)
                {
                     <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;"><i class="fas fa-check"></i></button>
                     <div class="position-absolute top-0 start-100 translate-middle mt-4 text-center" style="width: 100px;">
                        <small class="fw-bold text-primary">Tamamlandı</small>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        
        <div class="col-md-4">
            <div class="card dashboard-card border-0 h-100 p-3 shadow-sm">
                <h6 class="fw-bold text-muted small text-uppercase">Mevcut Durum</h6>
                <div class="mt-2">
                    @switch (currentStatus)
                    {
                        case SubmissionStatus.New:
                        case SubmissionStatus.Pending:
                            <span class="badge bg-primary fs-6 px-3 py-2">Yeni / Bekliyor</span>
                            break;
                        case SubmissionStatus.UnderReview:
                            <span class="badge bg-warning text-dark border border-warning px-2 py-1 rounded-2">
                                <i class="fas fa-hourglass-half me-1"></i> İnceleniyor
                            </span>
                            break;
                        case SubmissionStatus.RevisionRequired:
                            <span class="badge bg-info text-dark border border-info px-2 py-1 rounded-2">Revizyon İsteniyor</span>
                            break;
                        case SubmissionStatus.Accepted:
                            <span class="badge bg-success border border-success px-2 py-1 rounded-2">Kabul Edildi</span>
                            break;
                        case SubmissionStatus.Rejected:
                            <span class="badge bg-danger border border-danger px-2 py-1 rounded-2">Reddedildi</span>
                            break;
                        case SubmissionStatus.Presented:
                            <span class="badge bg-primary border border-primary px-2 py-1 rounded-2">Sunuldu (Tamamlandı)</span>
                            break;
                        case SubmissionStatus.Withdrawn:
                            <span class="badge bg-secondary border border-secondary px-2 py-1 rounded-2">Geri Çekildi</span>
                            break;
                        default:
                            <span class="badge bg-light text-dark border fs-6 px-3 py-2">@Model.Status</span>
                            break;
                    }
                </div>
                <small class="text-muted mt-2 d-block">Son Güncelleme: @(Model.DecisionDate?.ToString("dd MMM yyyy") ?? Model.CreatedDate.ToString("dd MMM yyyy"))</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card border-0 h-100 p-3 shadow-sm">
                <h6 class="fw-bold text-muted small text-uppercase">İşlemler</h6>
                <div class="mt-2">
                    
                    @if (currentStatus == SubmissionStatus.RevisionRequired)
                    {
                        <div class="alert alert-warning mb-2 small border-warning p-2">
                            <i class="fas fa-exclamation-triangle me-1"></i> Düzeltme talep edildi.
                        </div>
                        <a asp-action="UploadRevision" asp-route-id="@Model.Id" class="btn btn-sm btn-warning w-100 fw-bold text-dark">
                            <i class="fas fa-upload me-1"></i> Revizyon Yükle
                        </a>
                    }
                    else if (currentStatus == SubmissionStatus.Rejected)
                    {
                        <div class="alert alert-danger mb-3 small border-danger p-3 bg-danger bg-opacity-10">
                            <h6 class="fw-bold text-danger"><i class="fas fa-times-circle me-2"></i>Başvurunuz Reddedildi</h6>
                            <p class="mb-0">Maalesef çalışmanız uygun bulunmamıştır.</p>
                        </div>
                        <a asp-action="DownloadRejectionLetter" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-danger w-100 fw-bold shadow-sm">
                            <i class="fas fa-file-pdf me-2"></i> Ret Mektubunu İndir
                        </a>
                    }
                    else if (currentStatus == SubmissionStatus.Accepted)
                    {
                        <div class="alert alert-success mb-2 small border-success p-2">
                            <i class="fas fa-check-circle me-1"></i> Bildiriniz kabul edildi.
                        </div>
                        
                        <button class="btn btn-sm btn-primary w-100 fw-bold shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#uploadPresentationCollapse">
                            <i class="fas fa-file-powerpoint me-1"></i> Sunum Dosyası Yükle
                        </button>
                        
                        <div class="collapse mt-2" id="uploadPresentationCollapse">
                            <div class="card card-body p-2 bg-light border small">
                                <form asp-action="UploadPresentation" method="post" enctype="multipart/form-data">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <div class="input-group input-group-sm mb-1">
                                        <input type="file" name="presentationFile" class="form-control" accept=".ppt,.pptx,.pdf" required>
                                        <button class="btn btn-dark" type="submit">Yükle</button>
                                    </div>
                                    <span class="text-muted" style="font-size:0.7rem;">(PPT, PPTX veya PDF)</span>
                                </form>
                            </div>
                        </div>
                    }
                    else if (currentStatus == SubmissionStatus.New || currentStatus == SubmissionStatus.Pending)
                    {
                         <form asp-action="Withdraw" method="post" onsubmit="return confirm('Bu bildiriyi geri çekmek istediğinize emin misiniz? Bu işlem geri alınamaz.');" class="d-grid mt-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger text-start">
                                <i class="fas fa-ban me-2"></i> Bildiriyi Geri Çek
                            </button>
                        </form>
                        <div class="text-muted small mt-2" style="font-size: 0.75rem;">
                            <i class="fas fa-info-circle me-1"></i> Değerlendirme başlamadan önce geri çekebilirsiniz.
                        </div>
                    }
                    else if (currentStatus != SubmissionStatus.Withdrawn && currentStatus != SubmissionStatus.Rejected)
                    {
                        <div class="alert alert-secondary mb-0 small p-2 text-muted">
                            <i class="fas fa-lock me-1"></i> Değerlendirme süreci başladığı için bildiri geri çekilemez.
                        </div>
                    }
                    
                    @if(currentStatus == SubmissionStatus.Withdrawn)
                    {
                        <div class="alert alert-secondary mb-0 small p-2">
                            Bu bildiri tarafınızca geri çekilmiştir.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
             <div class="card dashboard-card border-0 h-100 p-3 shadow-sm">
                <h6 class="fw-bold text-muted small text-uppercase">Belgeler & Destek</h6>
                <div class="d-grid gap-2 mt-2">
                    
                    @if (currentStatus == SubmissionStatus.Accepted || currentStatus == SubmissionStatus.Presented)
                    {
                         <a asp-action="DownloadBadge" asp-route-id="@Model.Id" target="_blank" class="btn btn-sm btn-outline-dark text-start">
                            <i class="fas fa-id-badge me-2"></i> Yaka Kartı Oluştur
                        </a>
                         <a asp-action="DownloadAcceptanceLetter" asp-route-id="@Model.Id" target="_blank" class="btn btn-sm btn-outline-success text-start">
                            <i class="fas fa-file-contract me-2"></i> Kabul Mektubu
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-light text-muted text-start border disabled" disabled>
                            <i class="fas fa-id-badge me-2"></i> Yaka Kartı (Henüz Onaylanmadı)
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
    {
        <div class="card border-0 shadow-sm mt-4 mb-5 border-start border-5 border-primary">
            <div class="card-body p-4">
                <h5 class="fw-bold text-primary mb-3"><i class="fas fa-user-shield me-2"></i> Yönetici Paneli (Test İçin)</h5>
                
                <form asp-action="ChangeStatus" method="post" class="row g-3 align-items-end mb-3">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="col-md-4">
                        <label class="form-label small fw-bold text-muted">Durum Değiştir</label>
                        <select name="status" class="form-select form-select-sm">
                            <option value="New" selected="@(currentStatus == SubmissionStatus.New)">Yeni</option>
                            <option value="Pending" selected="@(currentStatus == SubmissionStatus.Pending)">Bekliyor</option>
                            <option value="UnderReview" selected="@(currentStatus == SubmissionStatus.UnderReview)">İnceleniyor</option>
                            <option value="RevisionRequired" selected="@(currentStatus == SubmissionStatus.RevisionRequired)">Revizyon İste</option>
                            <option value="Accepted" selected="@(currentStatus == SubmissionStatus.Accepted)">Kabul Et</option>
                            <option value="Rejected" selected="@(currentStatus == SubmissionStatus.Rejected)">Reddet</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-sm btn-primary w-100 fw-bold">
                            <i class="fas fa-save me-1"></i> Güncelle
                        </button>
                    </div>
                </form>

                <hr />

                <h6 class="fw-bold text-secondary mb-2">Hakem İşlemleri</h6>
                <button type="button" class="btn btn-outline-dark btn-sm" data-bs-toggle="modal" data-bs-target="#assignReviewerModal">
                    <i class="fas fa-user-plus me-1"></i> Hakem Ata
                </button>
            </div>
        </div>
    }

    <div class="card dashboard-card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom-0 pt-4 px-4">
            <ul class="nav nav-tabs card-header-tabs" id="detailTabs" role="tablist">
                <li class="nav-item"><button class="nav-link active fw-bold" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button">Bildiri Özeti</button></li>
                <li class="nav-item"><button class="nav-link fw-bold" id="authors-tab" data-bs-toggle="tab" data-bs-target="#authors" type="button">Yazarlar</button></li>
                <li class="nav-item"><button class="nav-link fw-bold" id="files-tab" data-bs-toggle="tab" data-bs-target="#files" type="button">Dosya Geçmişi</button></li>
            </ul>
        </div>
        
        <div class="card-body p-4">
            <div class="tab-content" id="detailTabsContent">
                
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <h5 class="fw-bold text-dark mb-3">@Model.Title</h5>
                    <div class="p-3 bg-light rounded border">
                        <p class="mb-0" style="white-space: pre-wrap; line-height: 1.7;">@Model.Abstract</p>
                    </div>
                    <div class="mt-3">
                        <strong class="text-primary">Anahtar Kelimeler:</strong> <span class="text-muted">@Model.Keywords</span>
                    </div>
                </div>

                <div class="tab-pane fade" id="authors" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="bg-light">
                                <tr><th>Sıra</th><th>Ad Soyad</th><th>Kurum</th><th>Email</th><th>Durum</th></tr>
                            </thead>
                            <tbody>
                                @if (Model.Authors != null)
                                {
                                    @foreach (var author in Model.Authors.OrderBy(a => a.Order))
                                    {
                                        <tr>
                                            <td>@author.Order</td>
                                            <td class="fw-bold">@author.FirstName @author.LastName</td>
                                            <td>@author.Institution</td>
                                            <td>@author.Email</td>
                                            <td>
                                                @if (author.IsCorrespondingAuthor) { <span class="badge bg-info text-dark">Sorumlu Yazar</span> }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="files" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle">
                            <thead class="bg-light">
                                <tr><th>Versiyon</th><th>Dosya Adı</th><th>Tip</th><th>Yükleme Tarihi</th><th>İşlem</th></tr>
                            </thead>
                            <tbody>
                                @if (Model.Files != null && Model.Files.Any())
                                {
                                    @foreach (var file in Model.Files.OrderByDescending(f => f.UploadedAt))
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">V.@file.Version</span></td>
                                            <td>@file.FileName</td>
                                            <td>@file.Type</td>
                                            <td>@file.UploadedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <a href="@file.FilePath" target="_blank" class="btn btn-sm btn-primary"><i class="fas fa-download me-1"></i> İndir</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="5" class="text-center text-muted">Dosya bulunamadı.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="assignReviewerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Review" asp-action="AssignReviewer" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Hakem Ata</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="SubmissionId" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">Hakem Seçiniz (Email veya ID)</label>
                        <input type="text" name="ReviewerId" class="form-control" placeholder="Hakem Kullanıcı ID'si giriniz..." required />
                        <small class="text-muted">Şimdilik manuel ID girişi yapılıyor.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-primary">Atamayı Yap</button>
                </div>
            </form>
        </div>
    </div>
</div>