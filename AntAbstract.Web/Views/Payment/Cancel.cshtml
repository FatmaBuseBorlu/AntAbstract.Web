@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitleCancel"];
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <i class="bi bi-x-circle-fill text-danger" style="font-size: 5rem;"></i>
                    <h1 class="display-4 mt-3">@Localizer["CancelHeader"]</h1>
                    <p class="lead text-muted">@Localizer["CancelLead"]</p>
                    <hr>
                    <p>@Localizer["CancelInfo"]</p>
                    <a asp-controller="Registration" asp-action="Index" class="btn btn-secondary mt-3">@Localizer["BackToRegistrationLink"]</a>
                </div>
            </div>
        </div>
    </div>
</div>