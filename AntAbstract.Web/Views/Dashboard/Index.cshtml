@model AntAbstract.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Panel";
    Layout = "_LayoutDashboard";
}

<div class="card border-0 shadow-sm mb-4 bg-white">
    <div class="card-body p-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h6 class="text-muted text-uppercase fw-bold small mb-1">AKTİF ORGANİZASYON</h6>
                <h3 class="fw-bold text-primary mb-0">
                    @(string.IsNullOrEmpty(Model.ConferenceName) ? "Genel Yönetim Paneli" : Model.ConferenceName)
                </h3>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-inline-block bg-light rounded-pill px-3 py-2 border">
                    <i class="far fa-calendar-alt text-muted me-2"></i>
                    <span class="fw-bold text-dark">@DateTime.Now.ToString("dd MMMM yyyy")</span>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer border-0 py-1 bg-primary"></div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="dashboard-card d-flex align-items-center">
            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3 text-primary">
                <i class="fas fa-file-contract fa-2x"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1">Toplam Bildiri</h6>
                <h3 class="fw-bold mb-0">@Model.TotalSubmissions</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="dashboard-card d-flex align-items-center">
            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3 text-warning">
                <i class="fas fa-clock fa-2x"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1">Bekleyen Karar</h6>
                <h3 class="fw-bold mb-0">@Model.AwaitingDecision</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="dashboard-card d-flex align-items-center">
            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3 text-success">
                <i class="fas fa-check-circle fa-2x"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1">Kabul Edilen</h6>
                <h3 class="fw-bold mb-0">@Model.AcceptedSubmissions</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="dashboard-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">Son Hareketler</h5>
                <a href="/Submission/Index" class="small text-decoration-none">Tümünü Gör</a>
            </div>

            @if (Model.TotalSubmissions == 0)
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80" class="mb-3 opacity-50" alt="Empty">
                    <p class="text-muted">Henüz bir işlem yapmadınız.</p>
                    <a href="/Submission/Create" class="btn btn-primary btn-sm">İlk Bildirini Gönder</a>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted mb-3">Mevcut başvurularınızın durumunu incelemek için listeye gidin.</p>
                    <a href="/Submission/Index" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-list me-1"></i> Bildirilerime Git
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-4">
        <div class="dashboard-card bg-primary text-white h-100" style="background: linear-gradient(135deg, #00aeef 0%, #0056b3 100%); border:none;">
            <h5 class="fw-bold mb-3">Yardım mı lazım?</h5>
            <p class="small opacity-75 mb-4">Bildiri gönderimi, ödeme veya sistemle ilgili teknik sorunlarınızda destek ekibimiz yanınızda.</p>
            <a href="/Home/Contact" class="btn btn-light text-primary fw-bold w-100 shadow-sm">Destek Talebi Oluştur</a>
        </div>
    </div>
</div>