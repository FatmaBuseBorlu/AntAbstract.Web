@model AntAbstract.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Panel";
    Layout = "_LayoutDashboard";
}

<div class="card border-0 shadow-sm mb-4 bg-white">
    <div class="card-body p-4 d-flex align-items-center justify-content-between">

        <div>
            <h6 class="text-muted text-uppercase fw-bold small mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">AKTİF ORGANİZASYON</h6>
            <h4 class="fw-bold text-dark mb-0">
                @(string.IsNullOrEmpty(Model.ConferenceName) ? "Genel Yönetim Paneli" : Model.ConferenceName)
            </h4>
        </div>

        <div class="d-none d-md-block text-end">
            <span class="badge bg-light text-primary border px-3 py-2 rounded-pill">
                <i class="far fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd MMMM yyyy")
            </span>
        </div>
    </div>
    <div class="card-footer border-0 py-1 bg-primary"></div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="dashboard-card d-flex align-items-center">
            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3 text-primary">
                <i class="fas fa-file-contract fa-2x"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1">Toplam Bildiri</h6>
                <h3 class="fw-bold mb-0">@Model.TotalSubmissions</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="dashboard-card d-flex align-items-center">
            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3 text-warning">
                <i class="fas fa-clock fa-2x"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1">Bekleyen Karar</h6>
                <h3 class="fw-bold mb-0">@Model.AwaitingDecision</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="dashboard-card d-flex align-items-center">
            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3 text-success">
                <i class="fas fa-check-circle fa-2x"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1">Kabul Edilen</h6>
                <h3 class="fw-bold mb-0">@Model.AcceptedSubmissions</h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="dashboard-card h-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">Son Hareketler</h5>
                <a href="/Submission/Index" class="small text-decoration-none">Tümünü Gör</a>
            </div>

            @if (Model.TotalSubmissions == 0)
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="80" class="mb-3 opacity-50" alt="Empty">
                    <p class="text-muted">Henüz bir işlem yapmadınız.</p>
                    <a href="/Submission/Create" class="btn btn-primary btn-sm">İlk Bildirini Gönder</a>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted mb-3">Mevcut başvurularınızın durumunu incelemek için listeye gidin.</p>
                    <a href="/Submission/Index" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-list me-1"></i> Bildirilerime Git
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-4">

        <div class="card dashboard-card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h6 class="fw-bold text-dark mb-0">Katıldığım Etkinlikler</h6>
            </div>
            <div class="card-body">
                @if (Model.MyConferences != null && Model.MyConferences.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var conf in Model.MyConferences)
                        {
                            <li class="list-group-item px-0 py-3 border-bottom">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 text-center bg-light rounded p-2 border" style="min-width: 50px;">
                                        <span class="d-block fw-bold text-primary small">@conf.StartDate.ToString("MMM")</span>
                                        <span class="d-block fw-bold text-dark h6 mb-0">@conf.StartDate.Day</span>
                                    </div>

                                    <div class="flex-grow-1 overflow-hidden">
                                        <h6 class="text-truncate mb-1" title="@conf.Title">
                                            <a href="/@conf.Slug" target="_blank" class="text-decoration-none text-dark fw-bold stretched-link">
                                                @conf.Title
                                            </a>
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i> @(conf.City ?? "Online")
                                        </small>
                                    </div>

                                    <div class="ms-2 text-muted">
                                        <i class="fas fa-chevron-right small"></i>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-center py-4 text-muted small">
                        <i class="far fa-calendar-times fs-4 mb-2 d-block"></i>
                        Henüz bir kongreye kayıt olmadınız.
                    </div>
                }
            </div>
        </div>

        <div class="dashboard-card bg-primary text-white h-100" style="background: linear-gradient(135deg, #00aeef 0%, #0056b3 100%); border:none;">
            <h5 class="fw-bold mb-3">Yardım mı lazım?</h5>
            <p class="small opacity-75 mb-4">Bildiri gönderimi, ödeme veya sistemle ilgili teknik sorunlarınızda destek ekibimiz yanınızda.</p>
            <a href="/Home/Contact" class="btn btn-light text-primary fw-bold w-100 shadow-sm">Destek Talebi Oluştur</a>
        </div>
    </div>
</div>