@model AntAbstract.Web.Models.ViewModels.DashboardViewModel
@inject AntAbstract.Infrastructure.Context.TenantContext Tc

@{
    ViewData["Title"] = "Panel";
    Layout = "_LayoutDashboard";

    bool isReferee = ViewBag.IsReferee ?? false;
    bool isAuthor = ViewBag.IsAuthor ?? false;
    int pendingReviews = ViewBag.PendingReviews ?? 0;
    int completedReviews = ViewBag.CompletedReviews ?? 0;
    bool isAdmin = User.IsInRole("Admin");

    string mainColumnClass = isAdmin ? "col-12" : "col-lg-8";

    var slug = Context.GetRouteValue("slug")?.ToString() ?? Tc.Current?.Slug ?? "";
    var baseUrl = string.IsNullOrWhiteSpace(slug) ? "" : $"/{slug}";

    var reviewIndexUrl = $"{baseUrl}/Review/Index";
    var submissionCreateUrl = $"{baseUrl}/Submission/Create";
    var submissionIndexUrl = $"{baseUrl}/Submission/Index";
    var dashboardUrl = $"{baseUrl}/Dashboard";
    var adminUsersUrl = $"{baseUrl}/Admin/Users";
}

<div class="card border-0 shadow-sm mb-4 bg-white">
    <div class="card-body p-4 d-flex align-items-center justify-content-between">
        <div>
            <h6 class="text-muted text-uppercase fw-bold small mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">AKTİF ORGANİZASYON</h6>
            <h4 class="fw-bold text-dark mb-0">
                @(string.IsNullOrEmpty(Model.ConferenceName) ? "Genel Yönetim Paneli" : Model.ConferenceName)
            </h4>
        </div>
        <div class="d-none d-md-block text-end">
            <span class="badge bg-light text-primary border px-3 py-2 rounded-pill">
                <i class="far fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dd MMMM yyyy")
            </span>
        </div>
    </div>
    <div class="card-footer border-0 py-1 bg-primary"></div>
</div>

@if (isAdmin)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm text-white" style="background: linear-gradient(45deg, #002D62, #0056b3);">
                <div class="card-body p-4 d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="fw-bold mb-2"><i class="fas fa-user-shield me-2"></i> Sistem Yönetici Modu</h4>
                        <p class="mb-0 opacity-75">Tüm işlemleri sol menüden yönetebilirsiniz.</p>
                    </div>
                    <div class="d-none d-md-block opacity-50">
                        <i class="fas fa-cogs fa-4x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (isReferee && !isAdmin)
{
    <h6 class="fw-bold text-muted text-uppercase small mb-3 ps-1"><i class="fas fa-gavel me-1 text-warning"></i> Hakem Görevleri</h6>
    <div class="row g-3 mb-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-muted fw-normal mb-1">Değerlendirme Bekleyen</h6>
                        <h2 class="fw-bold mb-0 text-dark">@pendingReviews</h2>
                        <a href="@reviewIndexUrl" class="btn btn-sm btn-outline-warning mt-3 fw-bold">
                            Listeye Git <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                        <i class="fas fa-hourglass-half fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-muted fw-normal mb-1">Tamamlanan Görev</h6>
                        <h2 class="fw-bold mb-0 text-dark">@completedReviews</h2>
                        <button class="btn btn-sm btn-light mt-3 text-muted disabled border">Arşiv</button>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if ((isAuthor || !isReferee) && !isAdmin)
{
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-muted fw-normal mb-1">Toplam Bildiri</h6>
                        <h2 class="fw-bold mb-0 text-dark">@Model.TotalSubmissions</h2>
                    </div>
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="fas fa-file-contract fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-muted fw-normal mb-1">Bekleyen Karar</h6>
                        <h2 class="fw-bold mb-0 text-dark">@Model.AwaitingDecision</h2>
                    </div>
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-muted fw-normal mb-1">Kabul Edilen</h6>
                        <h2 class="fw-bold mb-0 text-success">@Model.AcceptedSubmissions</h2>
                    </div>
                    <div class="icon-shape bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h6 class="text-muted fw-normal mb-1">Reddedilen</h6>
                        <h2 class="fw-bold mb-0 text-danger">@Model.RejectedSubmissions</h2>
                    </div>
                    <div class="icon-shape bg-danger bg-opacity-10 text-danger rounded-circle p-3">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="@mainColumnClass">
        <div class="card dashboard-card h-100 border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">Son Hareketler</h5>
                    @if (!isAdmin)
                    {
                        if (isReferee)
                        {
                            <a href="@reviewIndexUrl" class="small text-decoration-none">Tümünü Gör</a>
                        }
                        else
                        {
                            <a href="@submissionIndexUrl" class="small text-decoration-none">Tümünü Gör</a>
                        }
                    }
                </div>

                @if (isAdmin)
                {
                    <div class="text-center py-5">
                        <p class="text-muted">Yönetici olarak kullanıcıları ve kongreleri sol menüden yönetebilirsiniz.</p>
                        <div class="mt-3">
                            <a href="@adminUsersUrl" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fas fa-users-cog me-1"></i> Kullanıcıları Yönet
                            </a>
                        </div>
                    </div>
                }
                else if (isReferee)
                {
                    <div class="text-center py-4">
                        <p class="text-muted mb-3">Atanmış değerlendirmelerinizi görmek için listeye gidin.</p>
                        <a href="@reviewIndexUrl" class="btn btn-outline-warning btn-sm fw-bold">
                            <i class="fas fa-gavel me-1"></i> Hakem Görevlerime Git
                        </a>
                    </div>
                }
                else if (Model.TotalSubmissions == 0)
                {
                    <div class="text-center py-5">
                        <p class="text-muted">Henüz bir işlem yapmadınız.</p>
                        <a href="@submissionCreateUrl" class="btn btn-primary btn-sm">İlk Bildirini Gönder</a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted mb-3">Başvurularınızın durumunu görmek için listeye gidin.</p>
                        <a href="@submissionIndexUrl" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list me-1"></i> Bildirilerime Git
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (!isAdmin)
    {
        <div class="col-lg-4">
            <div class="card dashboard-card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h6 class="fw-bold text-dark mb-0">Katıldığım Etkinlikler</h6>
                </div>
                <div class="card-body">
                    @if (Model.MyConferences != null && Model.MyConferences.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var conf in Model.MyConferences)
                            {
                                <li class="list-group-item px-0 py-3 border-bottom">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3 text-center bg-light rounded p-2 border" style="min-width: 50px;">
                                                <span class="d-block fw-bold text-primary small">@conf.StartDate.ToString("MMM")</span>
                                                <span class="d-block fw-bold text-dark h6 mb-0">@conf.StartDate.Day</span>
                                            </div>
                                            <div class="flex-grow-1 overflow-hidden">
                                                <h6 class="text-truncate mb-1" title="@conf.Title">
                                                    @conf.Title
                                                </h6>
                                                <small class="text-muted">
                                                    <i class="fas fa-map-marker-alt me-1"></i> @(conf.City ?? "Online")
                                                </small>
                                            </div>
                                        </div>

                                        <form asp-action="SelectConference"
                                              asp-controller="Dashboard"
                                              asp-route-slug="@slug"
                                              method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="conferenceId" value="@conf.Id" />
                                            <input type="hidden" name="returnUrl" value="@dashboardUrl" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary fw-bold">
                                                Seç
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted small">
                            <i class="far fa-calendar-times fs-4 mb-2 d-block"></i>
                            Henüz bir kongreye kayıt olmadınız.
                        </div>
                    }
                </div>
            </div>

            <div class="card dashboard-card bg-primary text-white h-100 border-0 shadow-sm" style="background: linear-gradient(135deg, #00aeef 0%, #0056b3 100%);">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Yardım mı lazım</h5>
                    <p class="small opacity-75 mb-4">Teknik sorunlarınızda destek ekibimiz yanınızda.</p>
                    <a href="#" class="btn btn-light text-primary fw-bold w-100 shadow-sm">Destek Talebi Oluştur</a>
                </div>
            </div>
        </div>
    }
</div>
