@model AntAbstract.Application.DTOs.Review.ReviewAssignmentDto

@{
    ViewData["Title"] = "Bildiri Değerlendir";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
        <h4 class="fw-bold text-primary"><i class="fas fa-feather-alt me-2"></i>Değerlendirme Ekranı</h4>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="row">
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="fas fa-file-alt me-1"></i> Bildiri Bilgileri
                </div>
                <div class="card-body">
                    <h5 class="fw-bold mb-3">@Model.SubmissionTitle</h5>

                    <h6 class="text-muted small text-uppercase fw-bold">Özet</h6>
                    <div class="p-3 bg-light rounded border mb-3 text-secondary" style="font-size: 0.95rem; line-height: 1.6;">
                        @Model.SubmissionAbstract
                    </div>

                    <h6 class="text-muted small text-uppercase fw-bold">Dosyalar</h6>
                    @if (Model.Files != null && Model.Files.Any())
                    {
                        <div class="list-group">
                            @foreach (var file in Model.Files)
                            {
                                <a href="@file.FilePath" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-file-pdf text-danger me-2"></i> @file.FileName
                                    </div>
                                    <span class="badge bg-secondary rounded-pill">İndir</span>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning small">Dosya bulunamadı.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-7 mb-4">
            <div class="card shadow-sm border-0 border-top border-4 border-primary h-100">
                <div class="card-header bg-white py-3">
                    <i class="fas fa-star me-1 text-warning"></i> <strong>Değerlendirme Formu</strong>
                </div>
                <div class="card-body">

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-action="Evaluate" method="post">
                        <input type="hidden" name="ReviewAssignmentId" value="@Model.Id" />

                        <div class="mb-4">
                            <label class="form-label fw-bold">Puanınız (0-100)</label>
                            <input type="number" name="Score" class="form-control form-control-lg text-center fw-bold text-primary"
                                   min="0" max="100" placeholder="Örn: 85" required style="width: 150px;" />
                            <div class="form-text">Lütfen çalışmaya 100 üzerinden bir puan veriniz.</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Öneriniz Nedir?</label>
                            <select name="Recommendation" class="form-select" required>
                                <option value="">-- Bir Karar Seçin --</option>
                                <option value="Accept">Kabul Edilmeli (Accept)</option>
                                <option value="MinorRevision">Küçük Düzeltmeler Gerekli (Minor Revision)</option>
                                <option value="MajorRevision">Büyük Düzeltmeler Gerekli (Major Revision)</option>
                                <option value="Reject">Reddedilmeli (Reject)</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Yazara Notlar & Eleştiriler</label>
                            <textarea name="CommentsToAuthor" class="form-control" rows="8"
                                      placeholder="Lütfen çalışmanın güçlü ve zayıf yönlerini, varsa düzeltme taleplerinizi detaylıca yazınız..." required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm" onclick="return confirm('Değerlendirmeyi göndermek istediğinize emin misiniz? Bu işlem geri alınamaz.');">
                                <i class="fas fa-paper-plane me-2"></i> Değerlendirmeyi Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>