@using AntAbstract.Domain.Entities
@model ReviewAssignment

@{
    ViewData["Title"] = "Özeti Değerlendir";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<p class="lead">Lütfen aşağıdaki özeti dikkatlice inceleyerek görüşlerinizi belirtin.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <h4>Değerlendirilen Özet</h4>
        <dl class="row mt-3 bg-light p-3 rounded">
            <dt class="col-sm-3">Başlık</dt>
            <dd class="col-sm-9">@Model.Submission.Title</dd>

            <dt class="col-sm-3">Özet Metni</dt>
            <dd class="col-sm-9" style="white-space: pre-wrap;">@Model.Submission.AbstractText</dd>
        </dl>

        <hr />

        <h4 class="mt-4">Değerlendirmeniz</h4>
        <form asp-action="Evaluate" method="post">
            <input type="hidden" name="assignmentId" value="@Model.ReviewAssignmentId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="recommendation" class="control-label fw-bold">Öneriniz</label>
                <select name="recommendation" class="form-select" required>
                    <option value="">-- Lütfen bir karar seçin --</option>
                    <option value="Kabul Et">Kabul Et</option>
                    <option value="Reddet">Reddet</option>
                    <option value="Küçük Revizyon">Küçük Revizyon</option>
                    <option value="Büyük Revizyon">Büyük Revizyon</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="score" class="control-label fw-bold">Genel Puan (1-5 Arası)</label>
                <select name="score" class="form-select" required>
                    <option value="">-- Puan --</option>
                    <option value="1">1 - Çok Zayıf</option>
                    <option value="2">2 - Zayıf</option>
                    <option value="3">3 - Orta</option>
                    <option value="4">4 - İyi</option>
                    <option value="5">5 - Çok İyi</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="commentsToAuthor" class="control-label fw-bold">Yazara Yorumlarınız (Bu yorumlar yazar tarafından görülecektir)</label>
                <textarea name="commentsToAuthor" class="form-control" rows="6"></textarea>
            </div>

            <div class="form-group mb-3">
                <label for="confidentialComments" class="control-label fw-bold">Editöre Özel Yorumlarınız (Bu yorumlar sadece kongre komitesi tarafından görülecektir)</label>
                <textarea name="confidentialComments" class="form-control" rows="4"></textarea>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Değerlendirmeyi Gönder" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>