@model List<AntAbstract.Application.DTOs.Review.ReviewAssignmentDto>

@{
    ViewData["Title"] = "Hakem Değerlendirmeleri";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Atanan Değerlendirmeler</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bildiri Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kongre</th>
                            <th>Bildiri Başlığı</th>
                            <th>Atanma Tarihi</th>
                            <th>Durum</th>
                            <th>Puan</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.ConferenceName ?? "Belirtilmemiş")</td>
                                <td>@item.SubmissionTitle</td>
                                <td>@item.AssignedDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (item.IsReviewed)
                                    {
                                        <span class="badge badge-success">Tamamlandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Bekliyor</span>
                                    }
                                </td>
                                <td>@(item.Score.HasValue? item.Score.ToString() : "-")</td>
                                <td>
                                    <a asp-action="Evaluate" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Değerlendir
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>