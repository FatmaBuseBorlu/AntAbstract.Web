@model AntAbstract.Web.Models.ViewModels.ReportsViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<p class="lead text-muted">@Localizer["PageLead"]</p>
<hr />

<h3>@Localizer["SubmissionsHeader"]</h3>
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-primary border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">@Localizer["CardTotal"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSubmissions</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-success border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">@Localizer["CardAccepted"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AcceptedSubmissions</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-danger border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">@Localizer["CardRejected"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RejectedSubmissions</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-warning border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">@Localizer["CardRevision"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.RevisionSubmissions</div>
            </div>
        </div>
    </div>
</div>

<hr />
<h3>@Localizer["TasksHeader"]</h3>
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-info border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">@Localizer["CardAwaitingAssignment"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AwaitingAssignmentSubmissions</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-dark border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-dark text-uppercase mb-1">@Localizer["CardAwaitingDecision"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AwaitingDecisionSubmissions</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-start border-secondary border-4 shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">@Localizer["CardActiveReviewers"]</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalReviewers</div>
            </div>
        </div>
    </div>
</div>