@model AntAbstract.Web.Models.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Kullanıcı Rol Yönetimi";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4 class="fw-bold mb-0">Kullanıcı Rol Yönetimi</h4>
            <small class="text-muted">Kullanıcı: <strong>@Model.UserEmail</strong></small>
        </div>

        <a asp-controller="Admin" asp-action="UserList" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success border-0">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger border-0">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="ManageRoles" asp-controller="Admin" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="UserId" type="hidden" />

        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">

                <div class="row row-cols-1 row-cols-md-2 g-2">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="col">
                            <div class="form-check">
                                <input asp-for="Roles[i].RoleName" type="hidden" />
                                <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="Roles[i].IsSelected">
                                    @Model.Roles[i].RoleName
                                </label>
                            </div>
                        </div>
                    }
                </div>

            </div>

            <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end p-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Kaydet
                </button>
                <a asp-action="UserList" asp-controller="Admin" class="btn btn-light">
                    İptal
                </a>
            </div>
        </div>
    </form>

</div>
