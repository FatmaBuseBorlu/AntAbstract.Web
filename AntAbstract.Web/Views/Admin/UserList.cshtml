@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@model IEnumerable<AppUser>
@inject UserManager<AppUser> UserManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<p class="lead text-muted">@Localizer["PageLead"]</p>
<hr />

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>@Localizer["TableHeaderEmail"]</th>
            <th>@Localizer["TableHeaderRoles"]</th>
            <th class="text-end" style="width: 20%;">@Localizer["TableHeaderActions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var roles = await UserManager.GetRolesAsync(user);

            <tr>
                <td>@user.Email</td>

                <td>
                    @if (roles != null && roles.Any())
                    {
                        foreach (var r in roles)
                        {
                            <span class="badge bg-light text-dark border me-1">@r</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>

                <td class="text-end">
                    <div class="btn-group">
                        <a asp-action="ManageRoles"
                           asp-route-userId="@user.Id"
                           class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-user-cog me-1"></i> @Localizer["ManageRolesButton"]
                        </a>

                        <button type="button" class="btn btn-sm btn-primary dropdown-toggle dropdown-toggle-split"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item"
                                   asp-action="ManageRoles"
                                   asp-route-userId="@user.Id">
                                    <i class="fas fa-user-cog me-2"></i> Rolleri Yönet
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
