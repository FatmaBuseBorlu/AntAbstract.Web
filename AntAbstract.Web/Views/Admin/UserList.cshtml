@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@model IEnumerable<AppUser>

@* UserManager'ı View içinde kullanabilmek için enjekte ediyoruz *@
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<p class="lead">Sisteme kayıtlı tüm kullanıcıların listesi ve rolleri.</p>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roller</th>
            <th style="width: 20%;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @{
                        // Her kullanıcı için rollerini alıyoruz
                        var roles = await UserManager.GetRolesAsync(user);
                        // Rolleri virgülle ayırarak tek bir satırda yazdırıyoruz
                        <span>@string.Join(", ", roles)</span>
                    }
                </td>
                <td>
                    @* Bu butonu bir sonraki adımda çalışır hale getireceğiz *@
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">Rolleri Yönet</a>
                </td>
            </tr>
        }
    </tbody>
</table>