@using AntAbstract.Domain.Entities
@model AntAbstract.Web.Models.ViewModels.DecisionIndexViewModel

@{
    ViewData["Title"] = "Karar Bekleyen Bildiriler";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <h4 class="fw-bold mb-4">⚖️ Karar Ekranı (Editör)</h4>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
    }

    <ul class="nav nav-tabs mb-3" id="decisionTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="awaiting-tab" data-bs-toggle="tab" data-bs-target="#awaiting" type="button">
                Bekleyenler <span class="badge bg-danger">@Model.AwaitingDecision.Count</span>
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="decided-tab" data-bs-toggle="tab" data-bs-target="#decided" type="button">
                Sonuçlananlar
            </button>
        </li>
    </ul>

    <div class="tab-content" id="decisionTabContent">

        <div class="tab-pane fade show active" id="awaiting" role="tabpanel">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    @if (Model.AwaitingDecision.Any())
                    {
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Yazar</th>
                                    <th>Hakem Puanları</th>
                                    <th class="text-end">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.AwaitingDecision)
                                {
                                    // Ortalama Puan Hesabı
                                    var reviews = item.ReviewAssignments.Where(r => r.Review != null).Select(r => r.Review);
                                    var avgScore = reviews.Any() ? reviews.Average(r => r.Score) : 0;

                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Author?.FirstName @item.Author?.LastName</td>
                                        <td>
                                            <span class="badge bg-info text-dark fs-6">Ort: @avgScore.ToString("0.0")</span>
                                            <div class="small text-muted mt-1">
                                                @foreach (var rev in reviews)
                                                {
                                                    <span class="d-inline-block border px-1 rounded me-1">@rev.Score (@rev.Recommendation)</span>
                                                }
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <form asp-action="MakeDecision" method="post" class="d-inline">
                                                <input type="hidden" name="submissionId" value="@item.SubmissionId" />
                                                <button type="submit" name="decision" value="Accept" class="btn btn-success btn-sm" onclick="return confirm('Kabul etmek istediğinize emin misiniz?')">
                                                    <i class="fas fa-check"></i> Kabul
                                                </button>
                                                <button type="submit" name="decision" value="Revision" class="btn btn-warning btn-sm" onclick="return confirm('Revizyon istemek istediğinize emin misiniz?')">
                                                    <i class="fas fa-edit"></i> Revizyon
                                                </button>
                                                <button type="submit" name="decision" value="Reject" class="btn btn-danger btn-sm" onclick="return confirm('Reddetmek istediğinize emin misiniz?')">
                                                    <i class="fas fa-times"></i> Red
                                                </button>
                                            </form>
                                            <a href="/Submission/Details/@item.SubmissionId" class="btn btn-outline-primary btn-sm ms-1" target="_blank">Detay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Şu an hakem süreci tamamlanmış ve karar bekleyen bildiri yok.</p>
                    }
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="decided" role="tabpanel">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.AlreadyDecided)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (item.Status == SubmissionStatus.Accepted)
                                        {
                                            <span class="badge bg-success">Kabul</span>
                                        }
                                        else if (item.Status == SubmissionStatus.Rejected)
                                        {

                                            <span class="badge bg-danger">Red</span>
                                        }
                                        else if (item.Status == SubmissionStatus.RevisionRequired)
                                        {

                                            <span class="badge bg-warning text-dark">Revizyon</span>
                                        }
                                    </td>
                                    <td>@(item.DecisionDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>