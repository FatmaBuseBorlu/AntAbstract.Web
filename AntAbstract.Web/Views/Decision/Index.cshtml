@using AntAbstract.Domain.Entities
@model AntAbstract.Web.Models.ViewModels.DecisionIndexViewModel

@{
    ViewData["Title"] = "Karar Ekranı";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <h4 class="fw-bold"><i class="fas fa-gavel text-danger me-2"></i> Başvuru Karar Merkezi</h4>
        <p class="text-muted small">Hakem değerlendirmeleri tamamlanan bildiriler için nihai kararı buradan verebilirsiniz.</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success border-0 shadow-sm mb-4">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
    </div>
}

<ul class="nav nav-tabs mb-4" id="decisionTab" role="tablist">
    <li class="nav-item">
        <button class="nav-link active fw-bold" id="awaiting-tab" data-bs-toggle="tab" data-bs-target="#awaiting" type="button">
            <i class="fas fa-clock text-warning me-2"></i> Bekleyenler
            <span class="badge bg-danger ms-2">@Model.AwaitingDecision.Count</span>
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link fw-bold text-success" id="decided-tab" data-bs-toggle="tab" data-bs-target="#decided" type="button">
            <i class="fas fa-check-circle me-2"></i> Sonuçlananlar
            <span class="badge bg-light text-dark border ms-2">@Model.AlreadyDecided.Count</span>
        </button>
    </li>
</ul>

<div class="tab-content" id="decisionTabContent">

    <div class="tab-pane fade show active" id="awaiting" role="tabpanel">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4">Başlık</th>
                                <th>Yazar</th>
                                <th>Hakem Puanları</th>
                                <th class="text-end pe-4">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.AwaitingDecision.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        <i class="fas fa-check-double fa-2x mb-3 opacity-25"></i>
                                        <p class="mb-0">Harika! Karar bekleyen bildiri yok.</p>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model.AwaitingDecision)
                                {
                                    var reviews = item.ReviewAssignments
                                    .Where(r => r.Review != null)
                                    .Select(r => r.Review)
                                    .ToList();

                                    var avgScore = reviews.Any() ? reviews.Average(r => r.Score) : 0;

                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-dark text-truncate" style="max-width: 300px;" title="@item.Title">@item.Title</div>
                                            <div class="small text-muted">@item.CreatedDate.ToString("dd.MM.yyyy")</div>
                                        </td>
                                        <td>
                                            <div class="fw-bold text-dark">@item.Author?.FirstName @item.Author?.LastName</div>
                                            <div class="small text-muted" style="font-size:11px;">@item.Author?.Email</div>
                                        </td>
                                        <td>
                                            @if (reviews.Any())
                                            {
                                                <span class="badge bg-info text-white fs-6 mb-1">Ort: @avgScore.ToString("0.0")</span>
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var rev in reviews)
                                                    {
                                                        <span class="badge bg-light text-dark border" title="@rev.ReviewerName: @rev.CommentsToAuthor">
                                                            @rev.Score (@(rev.Recommendation == "Accept" ? "Kabul" : rev.Recommendation == "Reject" ? "Red" : rev.Recommendation))
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Puan Bekleniyor</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <button type="button" class="btn btn-sm btn-primary fw-bold" data-bs-toggle="modal" data-bs-target="#modal-@item.Id">
                                                Karar Ver
                                            </button>

                                            <div class="modal fade text-start" id="modal-@item.Id" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <form asp-action="MakeDecision" method="post">
                                                            <input type="hidden" name="submissionId" value="@item.Id" />
                                                            <div class="modal-header">
                                                                <h5 class="modal-title fw-bold">Karar Ver: @item.Title</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="mb-3">
                                                                    <label class="form-label fw-bold">Kararınız</label>
                                                                    <select name="decision" class="form-select" required>
                                                                        <option value="Accept">✅ Kabul Et</option>
                                                                        <option value="Reject">❌ Reddet</option>
                                                                        <option value="Revision">⚠️ Revizyon İste</option>
                                                                    </select>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Yazara Not (Opsiyonel)</label>
                                                                    <textarea name="note" class="form-control" rows="3" placeholder="Örn: Tebrikler, kabul edildi..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                                                                <button type="submit" class="btn btn-primary">Kaydet</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="decided" role="tabpanel">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4">Başlık</th>
                                <th>Yazar</th>
                                <th>Durum</th>
                                <th class="text-end pe-4">Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.AlreadyDecided.Any())
                            {
                                <tr><td colspan="4" class="text-center py-5 text-muted">Henüz sonuçlanmış bildiri yok.</td></tr>
                            }
                            @foreach (var item in Model.AlreadyDecided)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.Title</div>
                                    </td>
                                    <td>
                                        @item.Author?.FirstName @item.Author?.LastName
                                    </td>
                                    <td>
                                        @if (item.Status == SubmissionStatus.Accepted)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i> KABUL</span>
                                        }
                                        else if (item.Status == SubmissionStatus.Rejected)
                                        {
                                            <span class="badge bg-danger"><i class="fas fa-times me-1"></i> RED</span>
                                        }
                                        else if (item.Status == SubmissionStatus.RevisionRequired)
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-edit me-1"></i> REVİZYON</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        @(item.UpdatedDate != null ? item.UpdatedDate.Value.ToString("dd.MM.yyyy") : DateTime.Now.ToString("dd.MM.yyyy"))
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>