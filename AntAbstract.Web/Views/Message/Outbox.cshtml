@using AntAbstract.Domain.Entities
@model IEnumerable<Message>

@{
    ViewData["Title"] = "Giden Kutusu";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">Yeni Mesaj Oluştur</a>
        <a asp-action="Inbox" class="btn btn-secondary">Gelen Kutusuna Git</a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Giden kutunuzda hiç mesaj bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Alıcı</th>
                <th>Konu</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Receiver.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.SentDate.ToLocalTime().ToString("dd MMM yyyy, HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Görüntüle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}