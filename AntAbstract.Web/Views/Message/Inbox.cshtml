@model IEnumerable<AntAbstract.Domain.Entities.Message>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@Localizer["PageTitle"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-pencil-square me-2"></i> @Localizer["CreateNewButton"]
        </a>
        <a asp-action="Outbox" class="btn btn-secondary">
            <i class="bi bi-box-arrow-up-right me-2"></i> @Localizer["GoToOutboxLink"]
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        @Localizer["EmptyListMessage"]
    </div>
}
else
{
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>@Localizer["TableHeaderSender"]</th>
                <th>@Localizer["TableHeaderSubject"]</th>
                <th>@Localizer["TableHeaderDate"]</th>
                <th style="width: 15%;">@Localizer["TableHeaderActions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsRead ? "" : "fw-bold")">
                    <td>@item.Sender.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.SentDate.ToLocalTime().ToString("dd MMM yyyy, HH:mm")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">@Localizer["ReadButton"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}