@model AntAbstract.Domain.Entities.Message
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1 class="display-5">@Localizer["PageTitle"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ReceiverId" class="control-label fw-bold">@Localizer["ReceiverLabel"]</label>
                <select asp-for="ReceiverId" class="form-control" asp-items="ViewBag.Users">
                    <option value="">@Localizer["ReceiverPlaceholder"]</option>
                </select>
                <span asp-validation-for="ReceiverId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Subject" class="control-label fw-bold">@Localizer["SubjectLabel"]</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="control-label fw-bold">@Localizer["ContentLabel"]</label>
                <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">@Localizer["SendButton"]</button>
                <a asp-action="Inbox" class="btn btn-secondary">@Localizer["CancelButton"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}