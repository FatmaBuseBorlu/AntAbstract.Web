@model AntAbstract.Web.Models.ViewModels.DashboardViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PanelTitle"];
}

<h1 class="display-5">@Localizer["PanelTitle"]</h1>
<p class="lead text-muted">@Localizer["PageLead"]</p>
<hr />

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">@Localizer["CardTotalUsers"]</h5>
                        <h2 class="display-4">@Model.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people-fill" style="font-size: 4rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">@Localizer["CardTotalSubmissions"]</h5>
                        <h2 class="display-4">@Model.TotalSubmissions</h2>
                    </div>
                    <i class="bi bi-file-earmark-text-fill" style="font-size: 4rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">@Localizer["CardTotalReviews"]</h5>
                        <h2 class="display-4">@Model.TotalReviews</h2>
                    </div>
                    <i class="bi bi-check2-square" style="font-size: 4rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>
</div>