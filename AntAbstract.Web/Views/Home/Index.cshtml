@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject AntAbstract.Infrastructure.Context.TenantContext Tc
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@model IEnumerable<Conference>

@{
    ViewData["Title"] = Tc.Current != null ? Tc.Current.Name : "Ana Sayfa";
    Layout = "_Layout";
}

<style>
    /* Sayfa Yapısı */
    .page-content-wrapper { padding-top: 100px; }

    /* Hero Görsel Ayarı */
    .hero-image-container img {
        max-height: 380px !important;
        width: auto !important;
        max-width: 100%;
        object-fit: contain;
        display: block;
        margin: 0 auto;
        box-shadow: 0 20px 50px rgba(0,0,0,0.1);
    }

    /* Animasyon */
    .floating-anim { animation: float 6s ease-in-out infinite; }
    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
        100% { transform: translateY(0px); }
    }

    /* Kart Efektleri */
    .congress-card { 
        transition: transform 0.3s ease, box-shadow 0.3s ease; 
        border: 1px solid #eee;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
    }
    .congress-card:hover { 
        transform: translateY(-5px); 
        box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important; 
        border-color: #00aeef;
    }
    .card-body { flex: 1; }

    /* Arama Çubuğu Stilleri */
    .search-input { border-radius: 50px 0 0 50px; border: 1px solid #e0e0e0; padding-left: 25px; height: 55px; }
    .search-input:focus { box-shadow: none; border-color: #00aeef; }
    .search-btn { border-radius: 0 50px 50px 0; padding-left: 30px; padding-right: 30px; background-color: #00aeef; border: none; color: white; font-weight: bold; transition: background-color 0.3s; }
    .search-btn:hover { background-color: #008acb; }

    /* İSTATİSTİK ŞERİDİ */
    .stats-section {
        background: linear-gradient(135deg, #00aeef 0%, #007bb5 100%);
        color: white;
        padding: 60px 0;
        margin-top: 80px;
        position: relative;
    }
    .stat-item { padding: 20px; border-right: 1px solid rgba(255,255,255,0.2); }
    .stat-item:last-child { border-right: none; }
    .stat-icon { opacity: 0.8; margin-bottom: 15px; font-size: 2.5rem; }
    .stat-number { font-size: 2.5rem; font-weight: 800; line-height: 1; margin-bottom: 5px; }
    .stat-label { font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; opacity: 0.9; }
    
    @@media (max-width: 768px) {
        .stat-item { border-right: none; border-bottom: 1px solid rgba(255,255,255,0.2); padding-bottom: 30px; margin-bottom: 30px; }
        .stat-item:last-child { border-bottom: none; margin-bottom: 0; }
        .hero-image-container img { margin-top: 40px; }
    }
</style>

<div class="page-content-wrapper">
    @if (Tc.Current != null)
    {
        <div class="container text-center">
            <h1 class="display-4">@Localizer["WelcomeMessage", Tc.Current.Name]</h1>
            <p class="lead text-muted">@Localizer["PageLead"]</p>
        </div>
    }
    else
    {
        <section class="hero-modern mb-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 text-center text-lg-start mb-5 mb-lg-0">
                        <div class="d-inline-block bg-light text-primary border border-primary rounded-pill px-3 py-1 mb-3 fw-bold small">
                            🚀 Yeni Nesil Kongre Sistemi
                        </div>
                        <h1 class="display-4 fw-bold lh-sm mb-3">
                            Bilimsel Etkinlikleri <br>
                            <span style="color: #00aeef;">Zirveye Taşıyın</span>
                        </h1>
                        <p class="lead text-muted mb-4 pe-lg-5">
                            Kongre süreçlerinizi tek platformdan yönetin. Özet, hakem, kayıt ve konaklama işlemleri artık çok kolay.
                        </p>
                        
                        <div class="mt-4">
                            <div class="input-group shadow-sm rounded-pill bg-white" style="max-width: 500px;">
                                <input type="text" class="form-control search-input border-end-0" placeholder="Kongre adı veya şehir ara...">
                                <button class="btn search-btn" type="button">
                                    <i class="fas fa-search me-2"></i> ARA
                                </button>
                            </div>
                        </div>
                        
                    </div>
                    <div class="col-lg-6 hero-image-container position-relative text-center">
                        <img src="https://placehold.co/600x350/0056b3/ffffff?text=Dashboard+Onizleme" class="img-fluid rounded-3 floating-anim border border-4 border-white">
                    </div>
                </div>
            </div>
        </section>

        <div id="congress-list" class="bg-light py-5 mt-5">
            <div class="container">
                <div class="text-center mb-5">
                    <h3 class="fw-bold" style="color: #00aeef;">AÇIK KONGRELER</h3>
                    <p class="text-muted">Katılım sağlayabileceğiniz aktif etkinlikler</p>
                    <div style="width: 50px; height: 3px; background: #00aeef; margin: 15px auto;"></div>
                </div>

                <div class="row"> 
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var kongre in Model)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm border-0 congress-card">
                                    <a href="/@kongre.Slug" target="_blank" class="text-decoration-none text-dark h-100 d-flex flex-column">
                                        <div class="card-img-top bg-white border-bottom d-flex align-items-center justify-content-center position-relative p-4" style="height: 180px;">
                                            @if (!string.IsNullOrEmpty(kongre.LogoPath))
                                            {
                                                <img src="@kongre.LogoPath" alt="@kongre.Title" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                            }
                                            else
                                            {
                                                <div class="text-muted text-center opacity-50">
                                                    <i class="fa fa-university fa-3x mb-2"></i>
                                                    <div class="small">Görsel Yok</div>
                                                </div>
                                            }
                                            <div class="position-absolute top-0 end-0 m-3 bg-light rounded shadow-sm p-2 text-center lh-1 border">
                                                <div class="fw-bold text-primary fs-5">@kongre.StartDate.Day</div>
                                                <div class="small text-uppercase text-muted" style="font-size: 0.7rem;">@kongre.StartDate.ToString("MMM")</div>
                                            </div>
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <span class="badge bg-light text-dark border mb-2 align-self-start">@kongre.Slug</span>
                                            <h5 class="card-title fw-bold mb-3 text-truncate" title="@kongre.Title">@kongre.Title</h5>
                                            <p class="card-text text-muted small mt-auto">
                                                <i class="fa fa-map-marker-alt text-danger me-1"></i> @(kongre.City ?? "Online")
                                            </p>
                                        </div>
                                    </a>
                                    
                                    <div class="card-footer bg-white border-0 pb-3 pt-0">
                                        @{
                                            var registeredIds = ViewBag.RegisteredConferenceIds as List<Guid> ?? new List<Guid>();
                                        }
                                        
                                        @if (registeredIds.Contains(kongre.Id))
                                        {
                                            <div class="d-flex gap-2">
                                                <div class="btn btn-sm btn-success flex-fill fw-bold disabled" style="opacity: 1;">
                                                    <i class="fas fa-check-circle me-1"></i> KAYITLI
                                                </div>
                                                <a asp-controller="Payment" asp-action="PayForConference" asp-route-conferenceId="@kongre.Id"
                                                   class="btn btn-sm btn-outline-info flex-fill fw-bold">ÖDEME</a>
                                            </div>
                                        }
                                        else
                                        {
                                            @if (SignInManager.IsSignedIn(User))
                                            {
                                                <a asp-controller="Registration" asp-action="Index" asp-route-id="@kongre.Id" 
                                                   class="btn btn-primary w-100 fw-bold" style="background-color: #00aeef; border: none;">KAYIT OL</a>
                                            }
                                            else
                                            {
                                                <a href="/Identity/Account/Register?returnUrl=/Registration/Index/@kongre.Id" 
                                                   class="btn btn-primary w-100 fw-bold" style="background-color: #00aeef; border: none;">KAYIT OL</a>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <div class="alert alert-white shadow-sm d-inline-block px-5 border">
                                <i class="fas fa-info-circle text-primary mb-3 fs-2"></i>
                                <p class="mb-0 text-muted">Şu anda aktif bir kongre bulunmamaktadır.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <section class="stats-section">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-4 stat-item">
                        <i class="fas fa-users stat-icon"></i>
                        <div class="stat-number">10,843</div>
                        <div class="stat-label">Aktif Kullanıcı</div>
                    </div>
                    <div class="col-md-4 stat-item">
                        <i class="fas fa-globe-americas stat-icon"></i>
                        <div class="stat-number">124</div>
                        <div class="stat-label">Düzenlenen Kongre</div>
                    </div>
                    <div class="col-md-4 stat-item">
                        <i class="fas fa-file-alt stat-icon"></i>
                        <div class="stat-number">4,238</div>
                        <div class="stat-label">Toplam Bildiri</div>
                    </div>
                </div>
            </div>
        </section>
    }
</div>