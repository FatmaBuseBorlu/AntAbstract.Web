@using AntAbstract.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@model IEnumerable<Conference>

@{
    ViewData["Title"] = "Tüm Kongreler";
    Layout = "_Layout";
    
    var registeredIds = ViewBag.RegisteredConferenceIds as List<Guid> ?? new List<Guid>();
    var regMap = ViewBag.UserRegistrationIds as Dictionary<Guid, Guid>;
}

<style>
    .page-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 60px 0;
        margin-bottom: 50px;
    }
    
    .congress-card { 
        transition: transform 0.3s ease, box-shadow 0.3s ease; 
        border: 1px solid #eee;
        background-color: #fff;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .congress-card:hover { 
        transform: translateY(-5px); 
        box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important; 
        border-color: #00aeef;
    }
</style>

<div class="page-header text-center">
    <div class="container">
        <h1 class="display-5 fw-bold text-dark">Kongreler & Etkinlikler</h1>
        <p class="lead text-muted mb-4">Alanınızdaki en güncel bilimsel etkinlikleri keşfedin, kayıt olun ve yerinizi ayırtın.</p>
        
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group input-group-lg shadow-sm">
                    <input type="text" class="form-control border-0" placeholder="Kongre adı, şehir veya konu ara...">
                    <button class="btn btn-primary px-4 fw-bold" style="background-color: #00aeef; border:none;">
                        <i class="fas fa-search me-2"></i> ARA
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row"> 
        @if (Model != null && Model.Any())
        {
            @foreach (var kongre in Model)
            {
                var slug = !string.IsNullOrEmpty(kongre.Tenant?.Slug) ? kongre.Tenant.Slug : kongre.Slug;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 congress-card">

                        <a href="/@slug" target="_blank" class="text-decoration-none text-dark h-100 d-flex flex-column">
                            <div class="card-img-top bg-white border-bottom d-flex align-items-center justify-content-center position-relative p-4" style="height: 180px;">
                                @if (!string.IsNullOrEmpty(kongre.LogoPath))
                                {
                                    <img src="@kongre.LogoPath" alt="@kongre.Title" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                }
                                else
                                {
                                    <div class="text-muted text-center opacity-50">
                                        <i class="fa fa-university fa-3x mb-2"></i>
                                        <div class="small">Görsel Yok</div>
                                    </div>
                                }
                                <div class="position-absolute top-0 end-0 m-3 bg-light rounded shadow-sm p-2 text-center lh-1 border">
                                    <div class="fw-bold text-primary fs-5">@kongre.StartDate.Day</div>
                                    <div class="small text-uppercase text-muted" style="font-size: 0.7rem;">@kongre.StartDate.ToString("MMM")</div>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <span class="badge bg-light text-dark border mb-2 align-self-start">@slug</span>
                                <h5 class="card-title fw-bold mb-3 text-truncate" title="@kongre.Title">@kongre.Title</h5>
                                <p class="card-text text-muted small mt-auto">
                                    <i class="fa fa-map-marker-alt text-danger me-1"></i> @(kongre.City ?? "Online")
                                </p>
                            </div>
                        </a>

                        <div class="card-footer bg-white border-0 pb-3 pt-0">
                            <a href="/@slug" class="btn btn-outline-primary w-100 fw-bold rounded-pill">
                                DETAYLARI GÖR <i class="fas fa-arrow-right ms-2"></i>
                            </a>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-light border shadow-sm d-inline-block px-5">
                    <i class="fas fa-info-circle text-primary mb-3 fs-2"></i>
                    <p class="mb-0 text-muted">Şu anda listelenecek aktif kongre bulunamadı.</p>
                </div>
            </div>
        }
    </div>
</div>