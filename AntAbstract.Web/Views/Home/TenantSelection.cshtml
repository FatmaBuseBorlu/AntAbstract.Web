@model IEnumerable<AntAbstract.Domain.Entities.Conference>

@{
    ViewData["Title"] = "Aktif Kongreler";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-4 text-primary">Açık Kongreler</h2>
        <p class="lead text-muted">Detaylı bilgi ve kayıt için ilgilendiğiniz kongreye tıklayınız.</p>
        <hr class="w-25 mx-auto border-primary">
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-effect">

                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">

                            <div class="card-header bg-light text-center py-4">
                                @if (!string.IsNullOrEmpty(item.LogoPath))
                                {
                                    <img src="@item.LogoPath" alt="@item.Title" style="max-height: 100px; max-width: 100%;">
                                }
                                else
                                {
                                    <i class="fa fa-university fa-4x text-muted"></i>
                                }
                            </div>

                            <div class="card-body">
                                <h5 class="card-title font-weight-bold">@item.Title</h5>
                                <p class="card-text text-muted small">
                                    <i class="fa fa-map-marker text-danger"></i> @item.City
                                </p>
                                <p class="card-text text-muted small">
                                    <i class="fa fa-calendar text-primary"></i> @item.StartDate.ToString("dd.MM.yyyy")
                                </p>
                            </div>
                        </a>

                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a href="/Register/@item.Id" class="btn btn-sm btn-outline-primary">Kayıt Ol</a>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">İncele</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-warning">Şu anda aktif bir kongre bulunmamaktadır.</div>
            </div>
        }
    </div>
</div>

<style>
    /* Karta mouse ile gelince yukarı kalkma efekti */
    .hover-effect {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }
</style>