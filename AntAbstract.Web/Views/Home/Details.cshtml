@model AntAbstract.Domain.Entities.Conference
@using Microsoft.AspNetCore.Identity
@using AntAbstract.Domain.Entities
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout";
}

<style>
    .conf-hero {
        position: relative;
        background-color: #0f172a;
        background-size: cover;
        background-position: center;
        color: white;
        padding: 180px 0 120px 0;
        margin-bottom: 60px;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, rgba(15, 23, 42, 0.85) 0%, rgba(15, 23, 42, 0.95) 100%);
    }

    .info-cards-container {
        margin-top: -80px;
        position: relative;
        z-index: 10;
    }

    .modern-card {
        background: #fff;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border-top: 4px solid transparent;
        transition: transform 0.3s ease;
        height: 100%;
    }

        .modern-card:hover {
            transform: translateY(-5px);
        }
    .card-dates {
        border-top-color: #00aeef;
    }

    .card-download {
        border-top-color: #f59e0b;
    }

    .card-contact {
        border-top-color: #10b981;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .bg-blue-light {
        background-color: rgba(0, 174, 239, 0.1);
        color: #00aeef;
    }

    .bg-orange-light {
        background-color: rgba(245, 158, 11, 0.1);
        color: #f59e0b;
    }

    .bg-green-light {
        background-color: rgba(16, 185, 129, 0.1);
        color: #10b981;
    }

    .btn-hero-primary {
        background-color: #00aeef;
        color: white;
        font-weight: bold;
        padding: 12px 40px;
        border-radius: 50px;
        border: none;
        box-shadow: 0 4px 15px rgba(0, 174, 239, 0.4);
        transition: all 0.3s;
        text-decoration: none;
    }

        .btn-hero-primary:hover {
            background-color: #0095cc;
            transform: translateY(-2px);
            color: white;
        }
</style>

<div class="conf-hero" style="background-image: url('@(string.IsNullOrEmpty(Model.BannerPath) ? "https://placehold.co/1920x800/0f172a/FFF?text=Kongre+Banner" : Model.BannerPath)');">
    <div class="hero-overlay"></div>

    <div class="container position-relative text-center z-2">

        <span class="badge border border-white text-white px-3 py-2 rounded-pill mb-4 fw-light tracking-wider">
            @Model.Tenant.Slug.ToUpper()
        </span>

        <h1 class="display-4 fw-bold mb-4 lh-sm">@Model.Title</h1>

        <div class="d-flex justify-content-center gap-4 text-white-50 mb-5 fs-5">
            <span><i class="far fa-calendar-alt me-2 text-white"></i> @Model.StartDate.ToString("d MMMM yyyy")</span>
            <span class="d-none d-md-block">|</span>
            <span><i class="fas fa-map-marker-alt me-2 text-white"></i> @Model.City, @Model.Country</span>
        </div>

        <div>
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-controller="Registration" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-hero-primary btn-lg">
                    HEMEN KAYIT OL
                </a>
            }
            else
            {
                <a href="/Identity/Account/Register?returnUrl=/Registration/Index/@Model.Id" class="btn btn-hero-primary btn-lg">
                    HEMEN KAYIT OL
                </a>
            }
        </div>
    </div>
</div>

<div class="container info-cards-container mb-5">
    <div class="row g-4">

        <div class="col-md-4">
            <div class="modern-card card-dates">
                <div class="icon-box bg-blue-light">
                    <i class="far fa-clock"></i>
                </div>
                <h5 class="fw-bold text-dark mb-3">Önemli Tarihler</h5>
                <ul class="list-unstyled text-muted small mb-0">
                    <li class="d-flex justify-content-between mb-2">
                        <span>Son Özet Gönderimi:</span>
                        <span class="fw-bold text-dark">20.10.2025</span>
                    </li>
                    <li class="d-flex justify-content-between mb-2">
                        <span>Erken Kayıt:</span>
                        <span class="fw-bold text-dark">15.11.2025</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span>Kongre Tarihi:</span>
                        <span class="fw-bold text-dark">@Model.StartDate.ToString("dd.MM.yyyy")</span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-4">
            <div class="modern-card card-download text-center">
                <div class="icon-box bg-orange-light mx-auto">
                    <i class="fas fa-file-word"></i>
                </div>
                <h5 class="fw-bold text-dark mb-2">Özet Şablonu</h5>
                <p class="text-muted small mb-4">Bildirinizi hazırlarken lütfen resmi kongre şablonunu kullanınız.</p>
                <a href="#" class="btn btn-sm btn-outline-dark rounded-pill px-4 fw-bold">
                    <i class="fas fa-download me-2"></i> Şablonu İndir
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="modern-card card-contact">
                <div class="icon-box bg-green-light">
                    <i class="fas fa-headset"></i>
                </div>
                <h5 class="fw-bold text-dark mb-3">İletişim & Destek</h5>
                <p class="text-muted small mb-1">Sorularınız için sekreterya ile iletişime geçebilirsiniz.</p>
                <a href="mailto:info@antabstract.com" class="text-decoration-none fw-bold text-dark">
                    info@antabstract.com
                </a>
            </div>
        </div>

    </div>
</div>

<div class="container py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h6 class="text-primary fw-bold text-uppercase ls-md mb-3">DAVETLİSİNİZ</h6>
            <h2 class="fw-bold text-dark mb-4">Bilimsel Paylaşımın Merkezi</h2>
            <div class="text-muted" style="font-size: 1.1rem; line-height: 1.8;">
                @Html.Raw(Model.Description)
            </div>

            <div class="mt-5 pt-3 border-top">
                <p class="small text-muted mb-0">
                    Kongre Başkanı: <strong>Prof. Dr. Mehmet Yılmaz</strong>
                </p>
            </div>
        </div>
    </div>
</div>