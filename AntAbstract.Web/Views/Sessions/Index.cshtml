@model IEnumerable<AntAbstract.Domain.Entities.Session>

@{
    ViewData["Title"] = "Oturum Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Oturum Oluştur</a>
    </p>
</div>

<p class="lead">Bu kongre için oluşturulmuş tüm oturumların listesi.</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Oturum Başlığı</th>
            <th>Tarih ve Saat</th>
            <th>Yer</th>
            <th>Ait Olduğu Konferans</th>
            <th style="width: 25%;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conference.Title)
            </td>
            <td>
                    <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Yönet</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
