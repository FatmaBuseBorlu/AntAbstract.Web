@model IEnumerable<AntAbstract.Domain.Entities.Session>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5">@Localizer["PageTitle"]</h1>
        <p class="lead text-muted">@Localizer["PageLead"]</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill me-2"></i> @Localizer["CreateNewButton"]
        </a>
    </p>
</div>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>@Localizer["TableHeaderTitle"]</th>
            <th>@Localizer["TableHeaderDate"]</th>
            <th>@Localizer["TableHeaderLocation"]</th>
            <th>@Localizer["TableHeaderConference"]</th>
            <th style="width: 25%;">@Localizer["TableHeaderActions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.SessionDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Conference.Title)</td>
                <td>
                    <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-sm btn-primary">@Localizer["ManageButton"]</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">@Localizer["EditButton"]</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">@Localizer["DetailsButton"]</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">@Localizer["DeleteButton"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>