@model AntAbstract.Domain.Entities.Reviewer

@{
    ViewData["Title"] = "Hakem Düzenle";
}

<h1 class="display-5">@ViewData["Title"]</h1>
<h4>@Model.AppUser.Email</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="ExpertiseAreas" class="control-label fw-bold">Uzmanlık Alanları</label>
                <textarea asp-for="ExpertiseAreas" class="form-control" rows="4" placeholder="Örn: Yapay Zeka, Veri Madenciliği, Web Güvenliği..."></textarea>
                <span asp-validation-for="ExpertiseAreas" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>