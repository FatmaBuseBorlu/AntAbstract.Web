@model List<AntAbstract.Domain.Entities.Reviewer>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="row">
    <div class="col-12">
        <h1 class="display-5">@Localizer["PageTitle"]</h1>
        <p class="lead text-muted">@Localizer["PageLead"]</p>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
    return;
}

<div class="row mb-5">
    <div class="col-md-6">
        <h3 class="h4">@Localizer["AssignHeader"]</h3>
        <form asp-action="Assign" method="post">
            <div class="mb-3">
                <label class="form-label">@Localizer["UserSelectLabel"]</label>
                <select name="userId" class="form-control" asp-items="@ViewBag.AllUsers">
                    <option value="">@Localizer["UserSelectPlaceholder"]</option>
                </select>
                <input type="hidden" name="conferenceId" value="@ViewBag.CurrentConferenceId" />
            </div>
            <button type="submit" class="btn btn-success">@Localizer["AssignButton"]</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3 class="h4">@Localizer["RegisteredHeader"]</h3>
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Localizer["TableHeaderEmail"]</th>
                        <th>@Localizer["TableHeaderStatus"]</th>
                        <th>@Localizer["TableHeaderActions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reviewer in Model)
                    {
                        <tr>
                            <td>@reviewer.AppUser.Email</td>
                            <td>
                                @if (reviewer.IsActive)
                                {
                                    <span class="badge bg-success">@Localizer["StatusActive"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Localizer["StatusInactive"]</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@reviewer.Id" class="btn btn-sm btn-outline-warning">@Localizer["EditButton"]</a>
                                @if (reviewer.IsActive)
                                {
                                    <form asp-action="Deactivate" asp-route-id="@reviewer.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">@Localizer["DeactivateButton"]</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Activate" asp-route-id="@reviewer.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success">@Localizer["ActivateButton"]</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">@Localizer["EmptyListMessage"]</div>
        }
    </div>
</div>